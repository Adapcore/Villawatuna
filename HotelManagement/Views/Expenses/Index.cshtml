@using HotelManagement.Helper

@{
    ViewData["Title"] = "Expenses";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<link rel="stylesheet" href="~/css/expenses-index.css?v=@Configuration["Assets:Version"]" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">💰 Expenses</h2>
        <a asp-action="Create" class="btn btn-success btn-add-expense">
            <i class="bi bi-plus-circle"></i> <span>Add Expense</span>
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="expenseFilterForm" class="row g-3">
                <div class="col-md-2 col-sm-6">
                    <div class="expense-filter-field">
                        <label class="form-label fw-bold expense-filter-label">Type</label>
                        <select name="expenseTypeId" id="expenseTypeId" class="form-select form-select-sm expense-filter-input" asp-items="ViewBag.ExpenseTypes">
                        </select>
                    </div>
                </div>

                <div class="col-md-2 col-sm-6">
                    <div class="expense-filter-field">
                        <label class="form-label fw-bold expense-filter-label">Payee</label>
                        <input type="text" name="payeeName" id="payeeName" class="form-control form-control-sm expense-filter-input" placeholder="Search payee..." />
                    </div>
                </div>

                <div class="col-md-2 col-sm-6">
                    <div class="expense-filter-field">
                        <label class="form-label fw-bold expense-filter-label">From Date</label>
                        <input type="date" name="startDate" id="startDate" class="form-control form-control-sm expense-filter-input" />
                    </div>
                </div>

                <div class="col-md-2 col-sm-6">
                    <div class="expense-filter-field">
                        <label class="form-label fw-bold expense-filter-label">To Date</label>
                        <input type="date" name="endDate" id="endDate" class="form-control form-control-sm expense-filter-input" />
                    </div>
                </div>

                <div class="col-md-4 col-12">
                    <div class="expense-filter-actions">
                        <div class="expense-filter-buttons">
                            <div class="d-flex gap-1 flex-wrap flex-md-nowrap">
                                <button type="button" id="btnToday" class="btn btn-outline-secondary btn-sm flex-shrink-0">Today</button>
                                <button type="button" id="btnYesterday" class="btn btn-outline-secondary btn-sm flex-shrink-0">Yesterday</button>
                                <button type="button" id="btnMonth" class="btn btn-outline-secondary btn-sm flex-shrink-0">Month</button>
                                <button type="button" id="btnYear" class="btn btn-outline-secondary btn-sm flex-shrink-0">Year</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Loading Indicator -->
    <div id="expenseLoadingIndicator" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Loading expenses...</p>
    </div>

    <!-- 🔹 Desktop Table -->
    <div class="expenses-table-desktop" id="expenseTableDesktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th style="width: 12%">Date</th>
                        <th style="width: 20%">Expense Type</th>
                        <th style="width: 20%">Payee</th>
                        <th style="width: 15%" class="text-end">Amount</th>
                        <th style="width: 15%">Payment Method</th>
                        <th style="width: 10%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody id="expenseTableBody">
                    <!-- Content loaded via AJAX -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout -->
    <div class="expenses-table-mobile" id="expenseTableMobile">
        <!-- Content loaded via AJAX -->
    </div>

    <!-- Pagination Container -->
    <div id="expensePaginationContainer">
        <!-- Pagination loaded via AJAX -->
    </div>
</div>

@Html.AntiForgeryToken()
<input type="hidden" id="isAdminFlag" data-is-admin="@isAdmin" />

    <script src="~/js/expense-index.js?v=@Configuration["Assets:Version"]"></script>