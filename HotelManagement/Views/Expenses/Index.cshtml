@using HotelManagement.Helper
@model X.PagedList.IPagedList<HotelManagement.Models.Entities.Expense>

@{
    ViewData["Title"] = "Expenses";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime? _startDate = ViewBag.StartDate;
    DateTime? _endDate = ViewBag.EndDate;
    int _expenseTypeId = ViewBag.ExpenseTypeId ?? 0;
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<link rel="stylesheet" href="~/css/expenses-index.css" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">💰 Expenses</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Expense
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label fw-bold">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@(_startDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@(_endDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Expense Type</label>
                    <select name="expenseTypeId" class="form-select" asp-items="ViewBag.ExpenseTypes">
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- 🔹 Desktop Table -->
    <div class="expenses-table-desktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th style="width: 12%">Date</th>
                        <th style="width: 20%">Expense Type</th>
                        <th style="width: 20%">Payee</th>
                        <th style="width: 15%" class="text-end">Amount</th>
                        <th style="width: 15%">Payment Method</th>
                        <th style="width: 10%" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No expenses found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                                <td>@item.ExpenseType?.Name</td>
                                <td>@item.PayeeName</td>
                                <td class="text-end fw-bold">@item.Amount.ToString("N2")</td>
                                <td>@EnumHelper.GetDisplayName(item.PaymentMethod)</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a href="@Url.Action("Details", "Expenses", new { id = item.ID })" class="btn btn-sm btn-info">View</a>
                                        <a href="@Url.Action("Edit", "Expenses", new { id = item.ID })" class="btn btn-sm btn-warning">Edit</a>
                                        @if (isAdmin)
                                        {
                                            <button type="button" class="btn btn-sm btn-danger btn-delete-expense" data-expense-id="@item.ID" data-expense-no="@item.ID">
                                                @* <i class="bi bi-trash"></i> *@ Delete
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout -->
    <div class="expenses-table-mobile">
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3 fs-5">No expenses found.</p>
            </div>
        }
        else
        {
            // Group expenses by date (descending order)
            var groupedExpenses = Model
                .OrderByDescending(e => e.Date)
                .ThenByDescending(e => e.ID)
                .GroupBy(e => e.Date.Date)
                .ToList();

            @foreach (var dateGroup in groupedExpenses)
            {
                <div class="expense-date-group">
                    <div class="expense-date-header">
                        <h6 class="expense-date-title">@dateGroup.Key.ToString("MMM dd, yyyy")</h6>
                    </div>

                    @foreach (var item in dateGroup)
                    {
                        var expenseTypeName = !string.IsNullOrWhiteSpace(item.PayeeName) 
                            ? item.PayeeName 
                            : item.ExpenseType?.Name ?? "Expense";

                        <div class="expense-row-wrapper">
                            <div class="expense-row-compact expense-status-default">
                                <div class="expense-row-header">
                                    <div class="expense-type-icon">
                                        <i class="bi bi-cash-stack"></i>
                                    </div>

                                    <div class="expense-payee-name">
                                        <span class="expense-number-label">EXP No</span>
                                        <span class="expense-number-value">#@item.ID</span> - 
                                        @expenseTypeName
                                    </div>
                                    <div class="expense-amount">
                                        @item.Amount.ToString("N2")
                                    </div>
                                </div>
                                <div class="expense-row-footer">
                                    <span class="expense-number">
                                        @if (isAdmin)
                                        {
                                            <button type="button" class="btn-delete-expense-icon btn-delete-expense" 
                                                    data-expense-id="@item.ID" 
                                                    data-expense-no="@item.ID"
                                                    title="Delete Expense">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </span>
                                    <span class="expense-type-badge">@(item.ExpenseType?.Name ?? "-")</span>
                                    <span class="expense-payment-method">@EnumHelper.GetDisplayName(item.PaymentMethod)</span>
                                    <a href="@Url.Action("Edit", "Expenses", new { id = item.ID })" class="btn-view-expense">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (item.CreatedByMember != null && !string.IsNullOrEmpty(item.CreatedByMember.Name))
                                    {
                                        <span class="expense-creator">@item.CreatedByMember.Name</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    </div>
    @await Html.PartialAsync("_Pagination_expense", Model)
</div>

@Html.AntiForgeryToken()

<script>
    $(document).ready(function() {
        // Delete expense handler
        $(document).on('click', '.btn-delete-expense', function() {
            var expenseId = $(this).data('expense-id');
            var expenseNo = $(this).data('expense-no');
            
            // Show confirmation dialog using common component
            showConfirmDialog(
                'Are you sure you want to delete Expense #' + expenseNo + '?',
                function(confirmed) {
                    if (confirmed) {
                        deleteExpense(expenseId);
                    }
                },
                {
                    type: 'Danger',
                    title: 'Delete Expense',
                    yesButtonText: 'Yes, Delete',
                    noButtonText: 'No',
                    warningText: 'This action cannot be undone.',
                    dialogId: 'deleteExpenseConfirmDialog'
                }
            );
        });
    });

    // Delete expense via AJAX
    function deleteExpense(expenseId) {
        var token = $('input[name="__RequestVerificationToken"]').val();
        var deleteUrl = '/Expenses/Delete/' + expenseId;
        
        $.ajax({
            url: deleteUrl,
            type: 'POST',
            headers: {
                'RequestVerificationToken': token
            },
            success: function(response) {
                if (response.success) {
                    // Show success message
                    if (typeof showToastSuccess === 'function') {
                        showToastSuccess(response.message || 'Expense deleted successfully.');
                    } else {
                        alert(response.message || 'Expense deleted successfully.');
                    }
                    
                    // Reload the page after a short delay
                    setTimeout(function() {
                        window.location.reload();
                    }, 1000);
                } else {
                    // Show error message
                    if (typeof showToastError === 'function') {
                        showToastError(response.message || 'Error deleting expense.');
                    } else {
                        alert(response.message || 'Error deleting expense.');
                    }
                }
            },
            error: function(xhr, status, error) {
                var errorMessage = 'Error deleting expense. Please try again.';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMessage = xhr.responseJSON.message;
                }
                
                if (typeof showToastError === 'function') {
                    showToastError(errorMessage);
                } else {
                    alert(errorMessage);
                }
            }
        });
    }
</script>