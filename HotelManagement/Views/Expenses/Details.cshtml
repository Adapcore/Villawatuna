@model HotelManagement.Models.Entities.Expense

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold">Expense Details</h4>
            <a asp-action="Index" class="btn btn-light btn-sm px-3">
                ← Back
            </a>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <label class="fw-bold text-secondary">Date</label>
                    <div class="form-control-plaintext fs-5">@Model.Date.ToString("yyyy-MM-dd")</div>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold text-secondary">Expense Type</label>
                    <div class="form-control-plaintext fs-5">@Model.ExpenseType</div>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold text-secondary">Payee Name</label>
                    <div class="form-control-plaintext fs-5">@Model.PayeeName</div>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold text-secondary">Payment Method</label>
                    <div class="form-control-plaintext fs-5">@Model.PaymentMethod</div>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold text-secondary">Amount</label>
                    <div class="form-control-plaintext fs-5 text-success fw-bold">
                        @Model.Amount.ToString("N2")
                    </div>
                </div>

                <div class="col-md-12">
                    <label class="fw-bold text-secondary">Description</label>
                    <div class="form-control-plaintext fs-5">
                        @(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Attachment))
                {
                    <div class="col-md-12 text-center">
                        <label class="fw-bold text-secondary d-block">Attachment</label>
                        <img src="@Model.Attachment" class="img-fluid rounded shadow-sm mt-2" style="max-height: 200px;" />
                    </div>
                }

                <div class="col-md-12 text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning btn-lg px-4 me-2">
                        ✏️ Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                        ← Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .form-control-plaintext {
        background-color: #f8f9fa;
        border-radius: 0.5rem;
        padding: 0.75rem 1rem;
    }

    .card {
        border-radius: 1.2rem;
    }

    .btn-lg {
        font-size: 1.1rem;
        border-radius: 0.8rem;
    }

    @@media (max-width: 768px) {
        .fs-5 {
            font-size: 1rem !important;
        }
    }
</style>
