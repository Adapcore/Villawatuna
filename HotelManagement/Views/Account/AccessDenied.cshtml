@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <title>Access Denied - Vilawatuna Hotel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css" />
    <style>
        body {
            background: linear-gradient(135deg, #003366 0%, #00509e 100%);
            min-height: 100vh;
            max-height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .access-denied-container {
            max-width: 600px;
            width: 100%;
            text-align: center;
        }

        .hotel-logo {
            font-size: 36px;
            color: white;
            margin-bottom: 20px;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .access-denied-card {
            background: white;
            border-radius: 16px;
            padding: 35px 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
        }

        .access-denied-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #dc3545 0%, #ff6b6b 100%);
        }

        .icon-container {
            width: 100px;
            height: 100px;
            margin: 0 auto 20px;
            background: linear-gradient(135deg, #ffe5e5 0%, #ffcccc 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .icon-container::after {
            content: '';
            position: absolute;
            width: 85px;
            height: 85px;
            border: 3px solid #dc3545;
            border-radius: 50%;
            opacity: 0.3;
        }

        .access-denied-icon {
            font-size: 50px;
            color: #dc3545;
            position: relative;
            z-index: 1;
        }

        .access-denied-title {
            font-size: 28px;
            font-weight: bold;
            color: #003366;
            margin-bottom: 10px;
        }

        .access-denied-subtitle {
            font-size: 16px;
            color: #666;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .access-denied-message {
            font-size: 15px;
            color: #666;
            margin-bottom: 20px;
            line-height: 1.6;
            padding: 0 20px;
        }

        .hotel-features {
            display: flex;
            justify-content: center;
            gap: 25px;
            margin: 20px 0;
            flex-wrap: wrap;
        }

        .hotel-feature {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #003366;
        }

        .hotel-feature-icon {
            font-size: 28px;
            margin-bottom: 8px;
            opacity: 0.7;
        }

        .hotel-feature-text {
            font-size: 12px;
            font-weight: 500;
        }

        .btn-container {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 20px;
        }

        .btn-home {
            background-color: #003366;
            color: white;
            padding: 12px 30px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            transition: all 0.3s ease;
            border: none;
            font-size: 15px;
        }

        .btn-home:hover {
            background-color: #00509e;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 51, 102, 0.4);
        }

        .btn-contact {
            background-color: white;
            color: #003366;
            padding: 12px 30px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            font-weight: 500;
            transition: all 0.3s ease;
            border: 2px solid #003366;
            font-size: 15px;
        }

        .btn-contact:hover {
            background-color: #003366;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0, 51, 102, 0.3);
        }

        .decorative-line {
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, transparent, #003366, transparent);
            margin: 15px auto;
        }

        @@media (max-width: 768px) {
            .access-denied-card {
                padding: 40px 25px;
            }

            .access-denied-title {
                font-size: 26px;
            }

            .access-denied-subtitle {
                font-size: 16px;
            }

            .hotel-logo {
                font-size: 36px;
            }

            .btn-container {
                flex-direction: column;
            }

            .btn-home, .btn-contact {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="hotel-logo">
            üè® Vilawatuna Hotel
        </div>
        
        <div class="access-denied-card">
            <div class="icon-container">
                <i class="bi bi-shield-lock-fill access-denied-icon"></i>
            </div>
            
            <div class="access-denied-title">Access Restricted</div>
            <div class="access-denied-subtitle">Administrative Access Required</div>
            
            <div class="decorative-line"></div>
            
            <div class="access-denied-message">
                You do not have permission to access this area.<br />
                <strong>Administrative access required.</strong><br />
                Contact your system administrator if you need access.
            </div>

            <div class="hotel-features">
                <div class="hotel-feature">
                    <i class="bi bi-building hotel-feature-icon"></i>
                    <span class="hotel-feature-text">Hotel Management</span>
                </div>
                <div class="hotel-feature">
                    <i class="bi bi-shield-check hotel-feature-icon"></i>
                    <span class="hotel-feature-text">Secure Access</span>
                </div>
                <div class="hotel-feature">
                    <i class="bi bi-people hotel-feature-icon"></i>
                    <span class="hotel-feature-text">Admin Only</span>
                </div>
            </div>

            <div class="btn-container">
                <a href="/" class="btn-home">
                    <i class="bi bi-house-door me-2"></i>Return to Dashboard
                </a>
                <a href="/Account/Login" class="btn-contact">
                    <i class="bi bi-box-arrow-right me-2"></i>Switch Account
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

