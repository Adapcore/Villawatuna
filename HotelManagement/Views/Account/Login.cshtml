@model HotelManagement.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Member Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-card">
        <div class="login-title">Vilawatuna Hotel</div>

        <form method="post" asp-action="Login" asp-controller="Account">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter username or email" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4 form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMeCheck" />
                <label class="form-check-label" for="rememberMeCheck">Remember me</label>
            </div>

            <button type="submit" class="btn btn-login">Sign In</button>

            <div class="validation-summary-errors">
               @*  @Html.ValidationSummary(false) *@
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @* <partial name="_ValidationScriptsPartial" /> *@
</body>
</html>
