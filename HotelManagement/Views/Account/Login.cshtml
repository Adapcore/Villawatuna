@model HotelManagement.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Member Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #2c3e50, #4ca1af);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
            touch-action: manipulation;
            user-select: none;
        }

        .login-card {
            background: #fff;
            border-radius: 20px;
            padding: 40px 30px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 420px;
        }

        .login-title {
            text-align: center;
            font-size: 2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .form-control {
            height: 55px;
            font-size: 1.1rem;
            border-radius: 10px;
        }

        .form-check-label {
            font-size: 1rem;
        }

        .btn-login {
            background-color: #4ca1af;
            color: white;
            border: none;
            border-radius: 12px;
            width: 100%;
            padding: 15px;
            font-size: 1.3rem;
            font-weight: 600;
            transition: background 0.3s;
        }

        .btn-login:hover {
            background-color: #3b8490;
        }

        .validation-summary-errors {
            color: #e74c3c;
            font-size: 1rem;
            text-align: center;
            margin-top: 15px;
        }

        @@media (max-width: 768px) {
            .login-card {
                padding: 30px 20px;
            }
            .btn-login {
                font-size: 1.2rem;
                padding: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-title">Member Login</div>

        <form method="post" asp-action="Login" asp-controller="Account">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter username or email" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4 form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMeCheck" />
                <label class="form-check-label" for="rememberMeCheck">Remember me</label>
            </div>

            <button type="submit" class="btn btn-login">Sign In</button>

            <div class="validation-summary-errors">
               @*  @Html.ValidationSummary(false) *@
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @* <partial name="_ValidationScriptsPartial" /> *@
</body>
</html>
