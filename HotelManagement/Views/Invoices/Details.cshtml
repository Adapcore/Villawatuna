@using HotelManagement.Enums
@using HotelManagement.Helper
@model Invoice

@{
    ViewBag.Title = "Invoice Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Invoice Details</h2>
        <div>
            <a href="@Url.Action("Index", "Invoices")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <a href="@Url.Action("Print", "Invoices", new { id = Model.InvoiceNo })" target="_blank" class="btn btn-sm btn-warning">
                <i class="bi bi-printer"></i> Print
            </a>
            <a href="@Url.Action("PrintThermal", "Invoices", new { id = Model.InvoiceNo })" target="_blank" class="btn btn-sm btn-warning">
                <i class="bi bi-printer"></i> Thermal
            </a>
        </div>
    </div>

    <!-- Invoice Info -->
    <div class="card shadow-sm p-4 mb-4 border-primary">
        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Invoice No:</label>
                <p class="fs-5 text-dark">@Model.InvoiceNo</p>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Date:</label>
                <p class="fs-5 text-dark">@Model.Date.ToShortDateString()</p>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Type:</label>
                <p class="fs-5"><span class="badge bg-primary">@Model.Type.ToString()</span></p>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Status:</label>
                <p class="fs-5">
                    <span class="badge bg-@(Model.Status == InvoiceStatus.Paid ? "success" : Model.Status == InvoiceStatus.InProgress ? "warning" : "secondary")">
                        @EnumHelper.GetDisplayName(Model.Status)
                    </span>
                </p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Customer:</label>
                <p class="fs-6 text-dark">@Model.Customer?.FirstName @Model.Customer?.LastName</p>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Reference No:</label>
                <p class="fs-6 text-dark">@Model.ReferenceNo</p>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-bold text-secondary">Note:</label>
                <p class="fs-6 text-dark">@Model.Note</p>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" id="invoiceTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details"
                    type="button" role="tab" aria-controls="details" aria-selected="true">
                <i class="bi bi-file-earmark-text"></i> Details
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="payments-tab" data-bs-toggle="tab" data-bs-target="#payments"
                    type="button" role="tab" aria-controls="payments" aria-selected="false">
                <i class="bi bi-credit-card"></i> Payments
            </button>
        </li>
    </ul>

    <div class="tab-content" id="invoiceTabsContent">
        <!-- Details Tab -->
        <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">           

            <!-- Invoice Items -->
            <div class="card shadow-sm p-4 mb-4 border-info">
                <h5 class="mb-3 text-info">Invoice Items</h5>
                <table class="table table-bordered table-striped table-hover align-middle">
                    <thead class="table-info text-center">
                        <tr>
                            <th colspan="2" class="text-start">Item</th>
                            @if (Model.Type == InvoiceType.Stay)
                            {
                                <th>Check-In</th>
                                <th>Check-Out</th>
                            }
                            <th>Note</th>
                            <th class="text-end">Quantity</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.InvoiceDetails?.Any() ?? false)
                        {
                            foreach (var detail in Model.InvoiceDetails)
                            {
                                <tr>
                                    <td>@detail.ItemId</td>
                                    <td>@detail.Item?.Name</td>
                                    @if (Model.Type == InvoiceType.Stay)
                                    {
                                        <td>@detail.CheckIn?.ToShortDateString()</td>
                                        <td>@detail.CheckOut?.ToShortDateString()</td>
                                    }
                                    <td>@detail.Note</td>
                                    <td class="text-end">@detail.Quantity</td>
                                    <td class="text-end">@detail.UnitPrice.ToString("F2")</td>
                                    <td class="text-end fw-semibold text-success">@detail.Amount.ToString("F2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No items found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Totals -->
            <div class="card shadow-sm p-4 border-success">
                <div class="row mb-2">
                    <div class="col-md-4 offset-md-8">
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold text-secondary">Subtotal:</span>
                            <span class="text-dark">@Model.SubTotal.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold text-secondary">Service Charge:</span>
                            <span class="text-dark">@Model.ServiceCharge.ToString("F2")</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold fs-5 text-success">Gross Total:</span>
                            <span class="fw-bold fs-5 text-success">@Model.GrossAmount.ToString("F2")</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold fs-5 text-primary">Paid Amount:</span>
                            <span class="fw-bold fs-5 text-primary">@Model.Paid.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold fs-5 text-danger">Balance Amount:</span>
                            <span class="fw-bold fs-5 text-danger">@Model.Balance.ToString("F2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payments Tab -->
        <div class="tab-pane fade" id="payments" role="tabpanel" aria-labelledby="payments-tab">
            <div class="card shadow-sm p-4 border-warning mt-3">
                <h5 class="mb-3 text-warning">Payments</h5>
                <table class="table table-bordered table-striped table-hover align-middle">
                    <thead class="table-warning text-center">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Payments?.Any() ?? false)
                        {
                            foreach (var payment in Model.Payments)
                            {
                                <tr>
                                    <td>@payment.ID</td>
                                    <td>@payment.Date.ToShortDateString()</td>
                                    <td class="text-end fw-bold text-success">@payment.Amount.ToString("N2")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No payments found for this invoice.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f8fa;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }
</style>
