@{
    ViewBag.Title = "Select Invoice Type";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Select Invoice Type</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SelectType" method="post">
                        <div class="mb-3">
                            <label for="selectedType" class="form-label">Invoice Type</label>
                            <select id="selectedType" name="selectedType"
                                    asp-items="ViewBag.InvoiceTypes"
                                    class="form-select">
                            </select>
                        </div>
                        <div class="d-flex justify-content-end">
                            <a href="@Url.Action("Index", "Invoices")" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-arrow-right-circle"></i> Continue
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
