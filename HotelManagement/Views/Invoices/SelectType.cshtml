@{
    ViewBag.Title = "Select Invoice Type";
}

<h2>Select Invoice Type</h2>
<form asp-action="SelectType" method="post">
    <div class="form-group">
        <label>Invoice Type</label>
        <select name="selectedType" asp-items="ViewBag.InvoiceTypes" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Continue</button>
</form>


