@using HotelManagement.Enums
@using Newtonsoft.Json
@using Newtonsoft.Json.Serialization
@model HotelManagement.Models.ViewModels.CreateInvoiceViewModel

@{
    ViewData["Title"] = "Create Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string invoiceTypeName = Enum.GetName(typeof(InvoiceType), Enum.Parse<InvoiceType>(Model.Type.ToString()));
}

<div class="container-fluid bg-light py-2 px-2" style="min-height:40vh;">
    <div class="row g-2">
        <!-- Left side: Invoice Details -->
        <div class="col-lg-8 col-md-7">
            <div class="card shadow-sm mb-2">
                <div class="card-header bg-dark text-white py-2 px-3">
                    <h5 class="mb-0">Invoice Items</h5>
                </div>
                <div class="card-body p-2">
                    <div class="table-responsive">
                        <table id="invoiceItems" class="table table-bordered table-striped align-middle text-center table-sm">
                            <thead class="table-dark">
                                <tr>
                                    @if (Model.Type != (int)InvoiceType.Stay)
                                    {
                                        <th>Item</th>
                                        <th>Note</th>
                                        <th>Qty</th>
                                        <th>Price</th>
                                        <th>Amount</th>
                                        <th></th>
                                    }
                                    else
                                    {
                                        <th>Item</th>
                                        <th>Check-In</th>
                                        <th>Check-Out</th>
                                        <th># Room / Note</th>
                                        <th># Nights</th>
                                        <th>Price/Night</th>
                                        <th>Amount</th>
                                        <th></th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.InvoiceDetails)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" value="@detail.ItemId" class="itemId" />
                                            <div class="input-group input-group-sm">
                                                <select class="form-select orderItemSelect form-select-sm" data-selected="@detail.ItemId">
                                                    <option value="">-- Select --</option>
                                                </select>
                                                <button type="button" class="btnAddItem btn btn-primary" data-bs-toggle="modal" data-bs-target="#addItemModal" title="Browse Items">
                                                    <i class="bi bi-grid-3x3-gap"></i>
                                                </button>
                                            </div>
                                        </td>
                                        @if (Model.Type == 3)
                                        {
                                            <td><input type="date" class="form-control form-control-sm checkIn" value="@(detail.CheckIn?.ToString("yyyy-MM-dd"))" /></td>
                                            <td><input type="date" class="form-control form-control-sm checkOut" value="@(detail.CheckOut?.ToString("yyyy-MM-dd"))" /></td>
                                        }
                                        <td><input type="text" class="form-control form-control-sm note" value="@detail.Note" /></td>
                                        @if (Model.Type == (int)InvoiceType.Stay)
                                        {
                                            <td><input type="number" class="form-control form-control-sm orderQty text-end" value="@detail.Quantity" readonly /></td>
                                        }
                                        else
                                        {
                                            <td><input type="number" class="form-control form-control-sm orderQty text-end" value="@detail.Quantity" /></td>
                                        }
                                        <td><input type="number" class="form-control form-control-sm itemPrice text-end" value="@detail.UnitPrice.ToString("F2")" /></td>
                                        <td><input type="number" class="form-control form-control-sm itemTotal text-end" value="@detail.Amount.ToString("F2")" /></td>
                                        <td><button type="button" class="btn btn-danger btn-sm removeItemBtn">X</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <button type="button" id="addItemBtn" class="btn btn-primary w-100 mt-2 py-2 fs-6">
                        <i class="bi bi-plus-circle"></i> Add Item
                    </button>
                </div>
            </div>
        </div>

        <!-- Right side: Summary & Actions -->
        <div class="col-lg-4 col-md-5">
            <div class="card shadow-sm mb-2">
                <div class="card-header bg-success text-white py-2 px-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Invoice Summary</h5>
                        <span class="badge bg-warning text-dark">@invoiceTypeName</span>
                    </div>
                </div>
                <div class="card-body p-2">
                    <input asp-for="InvoiceNo" hidden />
                    <input asp-for="Type" hidden />

                    <!-- Two-column summary form -->
                    <div class="row g-2 mb-2">
                        <div class="col-6">
                            <label class="form-label fw-bold ">Date</label>
                            <input asp-for="Date" class="form-control form-control-sm fs-7" type="date" />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">Status</label>
                            @Html.DropDownListFor(model => model.Status, (IEnumerable<SelectListItem>)ViewBag.StatusList, new { @class = "form-select form-select-sm fs-7" })
                        </div>

                        <div class="col-6">
                            <label class="form-label fw-bold small">Customer</label>
                            <div class="input-group input-group-sm">
                                <select asp-for="CustomerId" class="form-select form-select-sm fs-7" asp-items="ViewBag.Customers">
                                    <option value="">-- Select Customer --</option>
                                </select>
                                <button type="button" id="btnAddCustomer" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#quickCustomerModal" title="Add new customer">
                                    <i class="bi bi-person-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold">Reference No</label>
                            <input asp-for="ReferenceNo" class="form-control form-control-sm fs-7" />
                        </div>
                    </div>

                    <div class="mb-2">
                        <label class="form-label fw-bold">Note</label>
                        <input asp-for="Note" class="form-control form-control-sm fs-7" />
                    </div>
                    @if (Model.Type == (int)InvoiceType.Stay)
                    {
                        <div id="dv_currency" class="d-flex justify-content-between">
                            <div class="mb-4">
                                <label class="form-label fw-bold ">Currency</label>
                                <select asp-for="Currency" id="ddlCurrency" class="form-select form-select-sm fs-7 " asp-items="ViewBag.CurrencyTypes"></select>
                            </div>
                            <div class="mb-2">
                                <label class="form-label fw-bold ">Rate</label>
                                <input id="txtCurrencyRate" type="number" class="form-control form-control-sm fs-7 text-end" step="1" placeholder="Auto-calculated" />
                            </div>
                        </div>
                    }
                    <hr class="my-1" />

                    @if (Model.Type == (int)InvoiceType.Stay)
                    {
                        <div class="d-flex justify-content-between fs-5 mb-1 text-primary">
                            <span>Cury Sub Total</span>
                            <span id="curySubTotal">@Model.CurySubTotal.ToString("N2")</span>
                        </div>
                        <hr class="my-2" />
                    }
                    else if (Model.Type == (int)InvoiceType.Dining)
                    {
                        <div class="d-flex justify-content-between fs-5 mb-1">
                            <span>Sub Total</span>
                            <span id="subTotal">@Model.SubTotal.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between fs-5 mb-1">
                            <span>Service Charge</span>
                            <span id="serviceCharge">@Model.ServiceCharge.ToString("N2")</span>
                        </div>
                        <hr class="my-2" />
                    }
                    <div class="d-flex justify-content-between fs-4 fw-bold text-success mb-1">
                        <span>Gross Amount</span>
                        <span id="grossAmount">@Model.GrossAmount.ToString("N2")</span>
                    </div>

                    <div id="dv_paidWrapper">
                        <hr class="my-2" />
                        <div class="d-flex justify-content-between fs-6 mb-1">
                            <span>Total Paid</span>
                            <span id="txtPaid">@Model.Paid.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between fs-6 mb-1 text-danger">
                            <span>Balance</span>
                            <span id="txtBalance">@Model.Balance.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between fs-6 mb-1">
                            <span>Last Paid</span>
                            <span id="txtLastPaid">@Model.Cash.ToString("N2")</span>
                        </div>
                    </div>

                    <div id="dv_paymentWrapper" class="mt-2">
                        <hr class="my-2" />

                        <div class="mb-2 d-flex justify-content-between my-4 text-primary">
                            @* <label class="form-label fw-bold fs-4 pe-5">Cash</label> *@
                            @Html.DropDownListFor(model => model.PaymentType, (IEnumerable<SelectListItem>)ViewBag.InvoicePaymentTypes, new { @class = "form-select form-select-sm fs-6" })
                            <input id="txtCash" type="number" class="form-control form-control-sm fs-6 fw-bold text-primary ms-5 text-end" />
                        </div>

                        <div id="dv_paymentRef" class="mb-2 fs-7">
                            <label class="form-label">Payment Reference</label>
                            <input id="txtPaymentReference" type="text" class="form-control form-control-sm fs-7" />
                        </div>

                        <div id="dv_payment" class="mb-2 d-none">
                            <label class="form-label fw-bold small">Payment</label>
                            <input id="txtPayment" type="number" class="form-control form-control-sm" readonly />
                        </div>

                        <div id="dv_balanceDue" class="d-flex justify-content-between fw-bold fs-5 mb-1 text-danger">
                            <span>Balance Due</span>
                            <span id="txtBalanceDue" class="fs4">0.00</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-grid gap-2">
                <button id="btnSave" type="button" class="btn btn-success btn-lg py-2"><i class="bi bi-save"></i> Save</button>
                <button id="btnPay" type="button" class="btn btn-danger btn-lg py-2"><i class="bi bi-currency-dollar"></i> Pay</button>
                <button id="btnComplete" type="button" class="btn btn-warning btn-lg py-2"><i class="bi bi-check2"></i> Complete</button>
                <button id="btnReOpen" type="button" class="btn btn-primary btn-lg py-2"><i class="bi bi-back"></i> Re-Open</button>
                <a id="btn_print" href="@Url.Action("PrintThermal", "Invoices", new { id = Model.InvoiceNo })" target="_blank" class="btn btn-warning btn-lg py-2">
                    <i class="bi bi-printer"></i> Print
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg py-2">
                    <i class="bi bi-x-circle"></i> Close
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Add Customer Modal -->
<div class="modal fade" id="quickCustomerModal" tabindex="-1" aria-labelledby="quickCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quickCustomerModalLabel">Add New Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmQuickCustomer" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ID" id="qcCustomerId" />
                    <div class="row g-2">
                        <div class="col-6">
                            <label class="form-label fw-bold small">Email</label>
                            <input type="email" class="form-control form-control-sm" name="Email" id="Email" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">Contact No</label>
                            <input type="text" class="form-control form-control-sm" name="ContactNo" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">First Name</label>
                            <input type="text" class="form-control form-control-sm" name="FirstName" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">Last Name</label>
                            <input type="text" class="form-control form-control-sm" name="LastName" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold small">Address</label>
                            <input type="text" class="form-control form-control-sm" name="Address" />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">Country</label>
                            <select class="form-select form-select-sm" name="Country">
                                <option value="">-- Select Country --</option>
                                @if (ViewBag.Countries != null)
                                {
                                    foreach (var c in (IEnumerable<KeyValuePair<string, string>>)ViewBag.Countries)
                                    {
                                        <option value="@c.Key">@c.Value</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">Passport No / NIC</label>
                            <input type="text" class="form-control form-control-sm" name="PassportNo" required />
                        </div>
                        <div class="col-6">
                            <label class="form-label fw-bold small">Active</label>
                            <div class="d-flex gap-3 align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Active" value="true" checked />
                                    <label class="form-check-label">Active</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Active" value="false" />
                                    <label class="form-check-label">Inactive</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="quickCustomerErrors" class="text-danger small mt-2 d-none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal" id="frmQuickCustomerClose">Close</button>
                <button type="submit" form="frmQuickCustomer" class="btn btn-primary btn-sm">
                    <i class="bi bi-save"></i> Save
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Quick Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="itemModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered" style="max-width:95% !important;">
        <div class="modal-content" style="height:90vh; display: flex; flex-direction: column;">

            <div class="modal-header bg-primary text-white" style="flex: 0 0 auto;">
                <h5 class="modal-title fw-bold" id="itemModalLabel">
                    <i class="bi bi-box-seam me-2"></i>Add Items
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div id="itemContainer" style="display: flex; flex-direction: column; flex: 1 1 auto; overflow: hidden;"></div>

        </div>
    </div>
</div>

