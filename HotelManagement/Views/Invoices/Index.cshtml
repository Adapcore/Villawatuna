@using HotelManagement.Enums
@using HotelManagement.Helper
@model HotelManagement.Models.ViewModels.InvoiceIndexViewModel

@{
    ViewData["Title"] = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
    InvoiceStatus? _invoiceStatus = ViewBag.InvoiceStatus;
    int _customerId = ViewBag.CustomerId;
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<link rel="stylesheet" href="~/css/invoice-index.css" />

<div class="container-fluid py-3">
    <!-- Touch-Optimized Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="fw-bold text-primary mb-0 fs-2">📋 Invoices</h1>
                <a asp-action="Create" class="btn btn-success btn-lg d-flex align-items-center gap-2 px-4 py-3">
                    <i class="bi bi-plus-circle fs-4"></i>
                    <span class="fs-5">New Invoice</span>
                </a>
            </div>

            <!-- Customer Filter -->
            <div class="card mb-3">
                <div class="card-body p-3">
                    <form method="get" asp-action="Index" class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold fs-5">Filter by Customer</label>

                            <select asp-for="CustomerId" class="form-select form-select-lg" asp-items="ViewBag.Customers" onchange="this.form.submit()">
                                <option value="0">-- All Customers --</option>
                            </select>
                            <input type="hidden" name="invoiceStatus" value="@ViewBag.InvoiceStatus" />
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Invoice Type Buttons - Touch Optimized -->
            <div class="row g-3 mb-4">
                <div class="col-12">
                    <h5 class="fw-bold mb-3">Quick Create Invoice</h5>
                    <div class="row g-3">
                        <div class="col-6 col-md-2">
                            <a asp-action="Create" asp-route-type="1" class="btn btn-outline-danger btn-lg w-75 h-75 d-flex flex-column align-items-center justify-content-center py-4" title="Add Dining Invoice">
                                <i class="bi bi-cup-hot-fill fs-1 mb-2"></i>
                                <span class="fw-bold">Dining</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-2">
                            <a asp-action="Create" asp-route-type="2" class="btn btn-outline-warning btn-lg w-75 h-75 d-flex flex-column align-items-center justify-content-center py-4" title="Add Take Away Invoice">
                                <i class="bi bi-bag-check-fill fs-1 mb-2"></i>
                                <span class="fw-bold">Take Away</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-2">
                            <a asp-action="Create" asp-route-type="3" class="btn btn-outline-primary btn-lg w-75 h-75 d-flex flex-column align-items-center justify-content-center py-4" title="Add Stay Invoice">
                                <i class="bi bi-building-check fs-1 mb-2"></i>
                                <span class="fw-bold">Stay</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-2">
                            <a asp-action="Create" asp-route-type="5" class="btn btn-outline-success btn-lg w-75 h-75 d-flex flex-column align-items-center justify-content-center py-4" title="Add Tour Invoice">
                                <i class="bi bi-bus-front-fill fs-1 mb-2"></i>
                                <span class="fw-bold">Tour</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-2">
                            <a asp-action="Create" asp-route-type="6" class="btn btn-outline-info btn-lg w-75 h-75 d-flex flex-column align-items-center justify-content-center py-4" title="Add Laundry Invoice">
                                <i class="bi bi-basket2-fill fs-2 mb-2"></i>
                                <span class="fw-bold">Laundry</span>
                            </a>
                        </div>
                        <div class="col-6 col-md-2">
                            <a asp-action="Create" asp-route-type="4" class="btn btn-outline-secondary btn-lg w-75 h-75 d-flex flex-column align-items-center justify-content-center py-4" title="Add Other Invoice">
                                <i class="bi bi-gear-fill fs-1 mb-2"></i>
                                <span class="fw-bold">Other</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 🔹 Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == null ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 0, customerId = _customerId })">
                All Invoices
                <span class="badge bg-secondary ms-2">@ViewBag.CountAll</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.InProgress ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 1, customerId = _customerId })">
                Open (In Progress)
                <span class="badge bg-info text-dark ms-2">@ViewBag.CountOpen</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.Complete ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 2 , customerId = _customerId})">
                Complete
                <span class="badge bg-primary ms-2">@ViewBag.CountComplete</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.PartiallyPaid ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 3, customerId = _customerId })">
                Partially Paid
                <span class="badge bg-warning text-dark ms-2">@ViewBag.CountPartial</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.Paid ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 4, customerId = _customerId })">
                Paid
                <span class="badge bg-success ms-2">@ViewBag.CountPaid</span>
            </a>
        </li>
    </ul>

    <!-- 🔹 Desktop Table -->
    <div class="invoice-table-desktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Invoice No</th>
                        <th>Customer</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-end">Total</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Invoices.Any())
                    {
                        foreach (var invoice in Model.Invoices)
                        {
                            <tr>
                                <td>@invoice.InvoiceNo</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(invoice.Customer?.RoomNo))
                                    {
                                        <text>#@invoice.Customer.RoomNo - @invoice.Customer.FirstName @invoice.Customer.LastName</text>
                                    }
                                    else
                                    {
                                        <text>@invoice.Customer?.FirstName @invoice.Customer?.LastName</text>
                                    }
                                </td>
                                <td>@invoice.Type</td>
                                <td>@invoice.Date.ToShortDateString()</td>
                                <td>@EnumHelper.GetDisplayName(invoice.Status)</td>
                                <td class="text-end">@invoice.GrossAmount.ToString("N2")</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a href="@Url.Action("Edit", "Invoices", new { id = invoice.InvoiceNo })" class="btn btn-sm btn-warning">View / Edit</a>
                                        @if (isAdmin)
                                        {
                                            <button type="button" class="btn btn-sm btn-danger btn-delete-invoice" data-invoice-id="@invoice.InvoiceNo" data-invoice-no="@invoice.InvoiceNo">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No invoices found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout -->
    <div class="invoice-table-mobile">
        @if (Model != null && Model.Invoices.Any())
        {
            foreach (var invoice in Model.Invoices)
            {
                var statusClass = invoice.Status switch
                {
                    InvoiceStatus.InProgress => "status-in-progress",
                    InvoiceStatus.Complete => "status-complete",
                    InvoiceStatus.PartiallyPaid => "status-partially-paid",
                    InvoiceStatus.Paid => "status-paid",
                    _ => "bg-secondary"
                };
                
                <div class="invoice-card">
                    <div class="invoice-card-header">
                        <h6 class="invoice-card-title">Invoice #@invoice.InvoiceNo</h6>
                        <span class="invoice-card-status @statusClass">@EnumHelper.GetDisplayName(invoice.Status)</span>
                    </div>
                    <div class="invoice-card-body">
                        <div class="invoice-card-row full-width">
                            <div class="invoice-card-label">Customer</div>
                            <div class="invoice-card-value">
                                @if (!string.IsNullOrWhiteSpace(invoice.Customer?.RoomNo))
                                {
                                    <text>#@invoice.Customer.RoomNo - @invoice.Customer.FirstName @invoice.Customer.LastName</text>
                                }
                                else
                                {
                                    <text>@invoice.Customer?.FirstName @invoice.Customer?.LastName</text>
                                }
                            </div>
                        </div>
                        <div class="invoice-card-row">
                            <div class="invoice-card-label">Type</div>
                            <div class="invoice-card-value">@invoice.Type</div>
                        </div>
                        <div class="invoice-card-row">
                            <div class="invoice-card-label">Date</div>
                            <div class="invoice-card-value">@invoice.Date.ToShortDateString()</div>
                        </div>
                        <div class="invoice-card-row full-width">
                            <div class="invoice-card-label">Total Amount</div>
                            <div class="invoice-card-value total">@invoice.GrossAmount.ToString("N2")</div>
                        </div>
                    </div>
                    <div class="invoice-card-footer">
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Edit", "Invoices", new { id = invoice.InvoiceNo })" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> View / Edit
                            </a>
                            @if (isAdmin)
                            {
                                <button type="button" class="btn btn-danger btn-sm btn-delete-invoice" data-invoice-id="@invoice.InvoiceNo" data-invoice-no="@invoice.InvoiceNo">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3 fs-5">No invoices found.</p>
            </div>
        }
    </div>

    @await Html.PartialAsync("_Pagination_invoice", Model.Invoices)
</div>

@Html.AntiForgeryToken()

<script>
    $(document).ready(function() {
        // Delete invoice handler
        $(document).on('click', '.btn-delete-invoice', function() {
            var invoiceId = $(this).data('invoice-id');
            var invoiceNo = $(this).data('invoice-no');
            
            // Show confirmation dialog using common component
            showConfirmDialog(
                'Are you sure you want to delete Invoice #' + invoiceNo + '?',
                function(confirmed) {
                    if (confirmed) {
                        deleteInvoice(invoiceId);
                    }
                },
                {
                    type: 'Danger',
                    title: 'Delete Invoice',
                    yesButtonText: 'Yes, Delete',
                    noButtonText: 'No',
                    warningText: 'This action cannot be undone.',
                    dialogId: 'deleteConfirmDialog'
                }
            );
        });
    });

    // Delete invoice via AJAX
    function deleteInvoice(invoiceId) {
        var token = $('input[name="__RequestVerificationToken"]').val();
        var deleteUrl = '/Internal/Invoices/Delete/' + invoiceId;
        
        $.ajax({
            url: deleteUrl,
            type: 'POST',
            headers: {
                'RequestVerificationToken': token
            },
            success: function(response) {
                if (response.success) {
                    // Show success message
                    if (typeof showToastSuccess === 'function') {
                        showToastSuccess(response.message || 'Invoice deleted successfully.');
                    } else {
                        alert(response.message || 'Invoice deleted successfully.');
                    }
                    
                    // Reload the page after a short delay
                    setTimeout(function() {
                        window.location.reload();
                    }, 1000);
                } else {
                    // Show error message
                    if (typeof showToastError === 'function') {
                        showToastError(response.message || 'Error deleting invoice.');
                    } else {
                        alert(response.message || 'Error deleting invoice.');
                    }
                }
            },
            error: function(xhr, status, error) {
                var errorMessage = 'Error deleting invoice. Please try again.';
                if (xhr.responseJSON && xhr.responseJSON.message) {
                    errorMessage = xhr.responseJSON.message;
                }
                
                if (typeof showToastError === 'function') {
                    showToastError(errorMessage);
                } else {
                    alert(errorMessage);
                }
            }
        });
    }
</script>