@using HotelManagement.Helper
@model X.PagedList.IPagedList<HotelManagement.Models.Entities.Invoice>

@{
    ViewData["Title"] = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="fw-bold text-primary mb-0">Invoices</h2>

        <div class="d-flex flex-wrap gap-2">

            <!-- Quick Add Buttons -->
            <a asp-action="Create" asp-route-type="1" class="btn btn-outline-danger rounded-circle" title="Add Dining Invoice">
                <i class="bi bi-cup-straw fs-5"></i>
            </a>

            <a asp-action="Create" asp-route-type="2" class="btn btn-outline-warning rounded-circle" title="Add Take Away Invoice">
                <i class="bi bi-bag-check-fill fs-5"></i>
            </a>

            <a asp-action="Create" asp-route-type="3" class="btn btn-outline-primary rounded-circle" title="Add Stay Invoice">
                <i class="bi bi-building-check fs-5"></i>
            </a>

            <a asp-action="Create" asp-route-type="4" class="btn btn-outline-secondary rounded-circle" title="Add Other Invoice">
                <i class="bi bi-sliders2 fs-5"></i>
            </a>

            <a asp-action="Create" asp-route-type="5" class="btn btn-outline-success rounded-circle" title="Add Tour Invoice">
                <i class="bi bi-bus-front-fill fs-5"></i>
            </a>

            <a asp-action="Create" class="btn btn-success d-flex align-items-center gap-1">
                <i class="bi bi-plus-circle"></i>
                <span>Add Invoice</span>
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Invoice No</th>
                <th>Customer</th>
                <th>Type</th>
                <th>Date</th>
                <th>Status</th>
                <th class="text-end">Total</th>
                <th style="width:120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var invoice in Model)
                {
                    <tr>
                        <td>@invoice.InvoiceNo</td>
                        <td>@invoice.Customer?.FirstName @invoice.Customer?.LastName</td>
                        <td>@invoice.Type</td>
                        <td>@invoice.Date.ToShortDateString()</td>
                        <td>@EnumHelper.GetDisplayName(invoice.Status)</td>
                        <td class="text-end">@invoice.GrossAmount.ToString("N2")</td>
                        <td>
                            <a href="@Url.Action("Details", "Invoices", new { id = invoice.InvoiceNo })" class="btn btn-sm btn-info">View</a>
                            <a href="@Url.Action("Edit", "Invoices", new { id = invoice.InvoiceNo })" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No invoices found.</td>
                </tr>
            }
        </tbody>
    </table>

    @await Html.PartialAsync("_Pagination", Model)
</div>

<style>
    .btn-outline-primary:hover i,
    .btn-outline-success:hover i,
    .btn-outline-warning:hover i,
    .btn-outline-secondary:hover i {
        transform: scale(1.1);
        transition: transform 0.2s;
    }

    .btn.rounded-circle {
        width: 42px;
        height: 42px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @@media (max-width: 576px) {
        .d-flex.flex-wrap.gap-2 {
            justify-content: center;
        }
    }
</style>
