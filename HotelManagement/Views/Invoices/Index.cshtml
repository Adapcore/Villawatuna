@using HotelManagement.Enums
@using HotelManagement.Helper
@model HotelManagement.Models.ViewModels.InvoiceIndexViewModel

@{
    ViewData["Title"] = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
    InvoiceStatus? _invoiceStatus = ViewBag.InvoiceStatus;
    int _customerId = ViewBag.CustomerId;
    InvoiceType? _invoiceType = ViewBag.InvoiceType;
    string _fromDate = ViewBag.FromDate;
    string _toDate = ViewBag.ToDate;
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<link rel="stylesheet" href="~/css/invoice-index.css" />

<div class="container-fluid py-3">
    <!-- Touch-Optimized Header -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="fw-bold text-primary mb-0 fs-2">📋 Invoices</h1>
                <a asp-action="Create" class="btn btn-success btn-sm d-flex align-items-center gap-2 px-3 py-2 btn-new-invoice">
                    <i class="bi bi-plus-circle"></i>
                    <span>New Invoice</span>
                </a>
            </div>

            <!-- Quick Invoice Type Buttons - Moved to Top -->
            <div class="row g-2 mb-3">
                <div class="col-12">
                    <h6 class="fw-bold mb-2">Quick Create Invoice</h6>
                    <div class="row g-2">
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="1" class="btn btn-outline-danger btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Dining Invoice">
                                <i class="bi bi-cup-hot-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Dining</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="2" class="btn btn-outline-warning btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Take Away Invoice">
                                <i class="bi bi-bag-check-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Take Away</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="3" class="btn btn-outline-primary btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Stay Invoice">
                                <i class="bi bi-building-check fs-4 mb-1"></i>
                                <span class="fw-bold small">Stay</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="5" class="btn btn-outline-success btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Tour Invoice">
                                <i class="bi bi-bus-front-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Tour</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="6" class="btn btn-outline-info btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Laundry Invoice">
                                <i class="bi bi-basket2-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Laundry</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="4" class="btn btn-outline-secondary btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Other Invoice">
                                <i class="bi bi-gear-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Other</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-3">
                <div class="card-body p-3">
                    <form method="get" asp-action="Index" id="invoiceFilterForm" class="row g-3">
                        <input type="hidden" name="invoiceStatus" value="@ViewBag.InvoiceStatus" />
                        <input type="hidden" name="page" value="1" />
                        
                        <div class="col-md-2 col-sm-6">
                            <label class="form-label fw-bold">Customer</label>
                            <select name="customerId" class="form-select form-select-sm" asp-items="ViewBag.Customers" asp-for="CustomerId">
                                <option value="0">-- All Customers --</option>
                            </select>
                        </div>
                        
                        <div class="col-md-2 col-sm-6">
                            <label class="form-label fw-bold">Invoice Type</label>
                            <select name="invoiceType" class="form-select form-select-sm">
                                <option value="">-- All Types --</option>
                                @foreach (var item in ViewBag.InvoiceTypes as List<SelectListItem>)
                                {
                                    <option value="@item.Value" selected="@(item.Value == (_invoiceType.HasValue ? ((int)_invoiceType.Value).ToString() : ""))">@item.Text</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-md-2 col-sm-6">
                            <label class="form-label fw-bold">From Date</label>
                            <input type="date" name="fromDate" id="fromDate" class="form-control form-control-sm" value="@ViewBag.FromDate" disabled />
                        </div>
                        
                        <div class="col-md-2 col-sm-6">
                            <label class="form-label fw-bold">To Date</label>
                            <input type="date" name="toDate" id="toDate" class="form-control form-control-sm" value="@ViewBag.ToDate" disabled />
                        </div>
                        
                        <div class="col-auto">
                            <label class="form-label fw-bold d-block">&nbsp;</label>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="chkEnableDateRange" checked="@(!string.IsNullOrEmpty(ViewBag.FromDate) || !string.IsNullOrEmpty(ViewBag.ToDate))">                                
                            </div>
                        </div>
                        
                        <div class="col-md-3 col-12">
                            <label class="form-label fw-bold d-block">&nbsp;</label>
                            <div class="d-flex gap-1 flex-wrap flex-md-nowrap align-items-end">
                                <button type="button" id="btnToday" class="btn btn-outline-secondary btn-sm">Today</button>
                                <button type="button" id="btnYesterday" class="btn btn-outline-secondary btn-sm">Yesterday</button>
                                <button type="button" id="btnMonth" class="btn btn-outline-secondary btn-sm">Month</button>
                                <button type="button" id="btnYear" class="btn btn-outline-secondary btn-sm">Year</button>
                                <button type="submit" id="btnApply" class="btn btn-primary btn-sm"><i class="bi bi-funnel"></i> Apply</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- 🔹 Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == null ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = (int?)null, customerId = _customerId, invoiceType = _invoiceType, fromDate = _fromDate, toDate = _toDate })">
                All Invoices
                <span class="badge bg-secondary ms-2">@ViewBag.CountAll</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.InProgress ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 1, customerId = _customerId, invoiceType = _invoiceType, fromDate = _fromDate, toDate = _toDate })">
                Open (In Progress)
                <span class="badge bg-info text-dark ms-2">@ViewBag.CountOpen</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.Complete ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 2, customerId = _customerId, invoiceType = _invoiceType, fromDate = _fromDate, toDate = _toDate })">
                Complete
                <span class="badge bg-primary ms-2">@ViewBag.CountComplete</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.PartiallyPaid ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 3, customerId = _customerId, invoiceType = _invoiceType, fromDate = _fromDate, toDate = _toDate })">
                Partially Paid
                <span class="badge bg-warning text-dark ms-2">@ViewBag.CountPartial</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(_invoiceStatus == InvoiceStatus.Paid ? "active" : "")" href="@Url.Action("Index", new { invoiceStatus = 4, customerId = _customerId, invoiceType = _invoiceType, fromDate = _fromDate, toDate = _toDate })">
                Paid
                <span class="badge bg-success ms-2">@ViewBag.CountPaid</span>
            </a>
        </li>
    </ul>

    <!-- 🔹 Desktop Table -->
    <div class="invoice-table-desktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Invoice No</th>
                        <th>Customer</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-end">Total</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Invoices.Any())
                    {
                        foreach (var invoice in Model.Invoices)
                        {
                            <tr>
                                <td>@invoice.InvoiceNo</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(invoice.Customer?.RoomNo))
                                    {
                                        <text>#@invoice.Customer.RoomNo - @invoice.Customer.FirstName @invoice.Customer.LastName</text>
                                    }
                                    else
                                    {
                                        <text>@invoice.Customer?.FirstName @invoice.Customer?.LastName</text>
                                    }
                                </td>
                                <td>@invoice.Type</td>
                                <td>@invoice.Date.ToShortDateString()</td>
                                <td>@EnumHelper.GetDisplayName(invoice.Status)</td>
                                <td class="text-end">@invoice.GrossAmount.ToString("N2")</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        <a href="@Url.Action("Edit", "Invoices", new { id = invoice.InvoiceNo })" class="btn btn-sm btn-warning">
                                            <i class="bi bi-eye"></i> View                                        </a>
                                        @{
                                            bool isPaymentsDisabled = invoice.Status == InvoiceStatus.InProgress || invoice.Status == InvoiceStatus.Complete;
                                        }
                                        <button type="button" class="btn btn-sm btn-info btn-view-payments @(isPaymentsDisabled ? "disabled" : "")" 
                                                data-invoice-no="@invoice.InvoiceNo" 
                                                @(isPaymentsDisabled ? "disabled" : "")
                                                title="@(isPaymentsDisabled ? "Payments not available for this invoice status" : "View Payments")">
                                            <div class="d-flex flex-column align-items-center">
                                                <i class="bi bi-credit-card"></i>
                                                <span class="btn-text">Payments</span>
                                            </div>
                                        </button>
                                        @if (isAdmin)
                                        {
                                            <button type="button" class="btn btn-sm btn-danger btn-delete-invoice" data-invoice-id="@invoice.InvoiceNo" data-invoice-no="@invoice.InvoiceNo">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No invoices found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout -->
    <div class="invoice-table-mobile">
        @if (Model != null && Model.Invoices.Any())
        {
            // Group invoices by date (descending order)
            var groupedInvoices = Model.Invoices
            .OrderByDescending(i => i.Date)
            .ThenByDescending(i => i.InvoiceNo)
            .GroupBy(i => i.Date.Date)
            .ToList();

            @foreach (var dateGroup in groupedInvoices)
            {
                <div class="invoice-date-group">
                    <div class="invoice-date-header">
                        <h6 class="invoice-date-title">@dateGroup.Key.ToString("MMM dd, yyyy")</h6>
                    </div>

                    @foreach (var invoice in dateGroup)
                    {
                        var statusClass = invoice.Status switch
                        {
                            InvoiceStatus.InProgress => "status-in-progress",
                            InvoiceStatus.Complete => "status-complete",
                            InvoiceStatus.PartiallyPaid => "status-partially-paid",
                            InvoiceStatus.Paid => "status-paid",
                            _ => "bg-secondary"
                        };

                        // Get invoice type icon
                        var typeIcon = invoice.Type switch
                        {
                            InvoiceType.Dining => "bi-cup-hot-fill",
                            InvoiceType.TakeAway => "bi-bag-check-fill",
                            InvoiceType.Stay => "bi-building-check",
                            InvoiceType.Tour => "bi-bus-front-fill",
                            InvoiceType.Laundry => "bi-basket2-fill",
                            InvoiceType.Other => "bi-gear-fill",
                            _ => "bi-receipt"
                        };

                        var customerName = !string.IsNullOrWhiteSpace(invoice.Customer?.RoomNo)
                        ? $"#{invoice.Customer.RoomNo} - {invoice.Customer.FirstName} {invoice.Customer.LastName}"
                        : $"{invoice.Customer?.FirstName} {invoice.Customer?.LastName}";

                        <div class="invoice-row-wrapper">
                            <div class="invoice-row-compact @statusClass">
                                <div class="invoice-row-header">
                                    <div class="invoice-type-icon">
                                        <i class="bi @typeIcon"></i>
                                    </div>
                                    <div class="invoice-customer-name">
                                        @customerName
                                    </div>
                                    <div class="invoice-amount">
                                        @invoice.GrossAmount.ToString("N2")
                                    </div>
                                </div>
                                <div class="invoice-row-footer">
                                    <span class="invoice-number">
                                        <span class="invoice-number-label">INV No</span>
                                        <span class="invoice-number-value">#@invoice.InvoiceNo</span>
                                        @if (isAdmin)
                                        {
                                            <button type="button" class="btn-delete-invoice-icon btn-delete-invoice" 
                                                    data-invoice-id="@invoice.InvoiceNo" 
                                                    data-invoice-no="@invoice.InvoiceNo"
                                                    title="Delete Invoice">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </span>
                                    @{
                                        bool isPaymentsDisabledMobile = invoice.Status == InvoiceStatus.InProgress || invoice.Status == InvoiceStatus.Complete;
                                    }
                                    <button type="button" class="btn-view-payments-icon btn-view-payments-mobile @(isPaymentsDisabledMobile ? "disabled" : "")" 
                                            data-invoice-no="@invoice.InvoiceNo" 
                                            @(isPaymentsDisabledMobile ? "disabled" : "")
                                            title="@(isPaymentsDisabledMobile ? "Payments not available for this invoice status" : "View Payments")">
                                        <i class="bi bi-credit-card"></i>
                                    </button>
                                    <a href="@Url.Action("Edit", "Invoices", new { id = invoice.InvoiceNo })" class="btn-view-invoice">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (invoice.CreatedByMember != null && !string.IsNullOrEmpty(invoice.CreatedByMember.Name))
                                    {
                                        <span class="invoice-creator">@invoice.CreatedByMember.Name</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3 fs-5">No invoices found.</p>
            </div>
        }
    </div>

    @await Html.PartialAsync("_Pagination_invoice", Model.Invoices)
</div>

<!-- Payments Modal -->
<div class="modal fade" id="invoicePaymentsModal" tabindex="-1" aria-labelledby="invoicePaymentsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="invoicePaymentsModalLabel">Payments for Invoice #<span id="modalInvoiceNo"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="invoicePaymentsModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading payments...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<script src="~/js/invoice-index.js"></script>
<script>
    // Date range filter functionality
    $(document).ready(function() {
        // Initialize date inputs based on checkbox state
        function updateDateInputsState() {
            const isEnabled = $('#chkEnableDateRange').is(':checked');
            $('#fromDate').prop('disabled', !isEnabled);
            $('#toDate').prop('disabled', !isEnabled);
            
            // If disabled, clear the values
            if (!isEnabled) {
                $('#fromDate').val('');
                $('#toDate').val('');
            } else {
                // If enabled and no dates set, set to today
                if (!$('#fromDate').val() || !$('#toDate').val()) {
                    const today = new Date().toISOString().slice(0, 10);
                    $('#fromDate').val(today);
                    $('#toDate').val(today);
                }
            }
        }

        // Initialize on page load
        updateDateInputsState();

        // Checkbox change handler
        $('#chkEnableDateRange').on('change', function() {
            updateDateInputsState();
        });

        // Apply button - applies filters
        $('#btnApply').on('click', function(e) {
            e.preventDefault();
            // If date range is disabled, ensure dates are cleared before submit
            if (!$('#chkEnableDateRange').is(':checked')) {
                $('#fromDate').val('');
                $('#toDate').val('');
            }
            $('#invoiceFilterForm').submit();
        });

        // Enable date inputs and set checkbox when a date button is clicked
        function enableDateInputs() {
            $('#chkEnableDateRange').prop('checked', true);
            updateDateInputsState();
        }

        $('#btnToday').on('click', function(e) {
            e.preventDefault();
            enableDateInputs();
            const t = new Date().toISOString().slice(0, 10);
            $('#fromDate').val(t);
            $('#toDate').val(t);
            $('#invoiceFilterForm').submit();
        });

        $('#btnYesterday').on('click', function(e) {
            e.preventDefault();
            enableDateInputs();
            var date = new Date();
            date.setDate(date.getDate() - 1);
            const t = date.toISOString().slice(0, 10);
            $('#fromDate').val(t);
            $('#toDate').val(t);
            $('#invoiceFilterForm').submit();
        });

        $('#btnMonth').on('click', function(e) {
            e.preventDefault();
            enableDateInputs();
            const now = new Date();
            const firstDay = new Date(now.getFullYear(), now.getMonth(), 1);
            const formatDate = (d) =>
                d.getFullYear() + '-' +
                String(d.getMonth() + 1).padStart(2, '0') + '-' +
                String(d.getDate()).padStart(2, '0');
            $('#fromDate').val(formatDate(firstDay));
            $('#toDate').val(formatDate(now));
            $('#invoiceFilterForm').submit();
        });

        $('#btnYear').on('click', function(e) {
            e.preventDefault();
            enableDateInputs();
            const now = new Date();
            const firstDay = new Date(now.getFullYear(), 0, 1);
            const formatDate = (d) =>
                d.getFullYear() + '-' +
                String(d.getMonth() + 1).padStart(2, '0') + '-' +
                String(d.getDate()).padStart(2, '0');
            $('#fromDate').val(formatDate(firstDay));
            $('#toDate').val(formatDate(now));
            $('#invoiceFilterForm').submit();
        });

        // Enable date inputs when manually changed
        $('#fromDate, #toDate').on('change', function() {
            $('#chkEnableDateRange').prop('checked', true);
            updateDateInputsState();
        });
    });
</script>