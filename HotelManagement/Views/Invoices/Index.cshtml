@using HotelManagement.Helper
@model IEnumerable<Invoice>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">Invoices</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Invoice
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Invoice No</th>
                <th>Customer</th>
                <th>Type</th>
                <th>Date</th>
                <th>Status</th>
                <th class="text-end">Total</th>
                <th style="width:120px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var invoice in Model)
                {
                    <tr>
                        <td>@invoice.InvoiceNo</td>
                        <td>@invoice.Customer?.FirstName @invoice.Customer?.LastName</td>
                        <td>@invoice.Type</td>
                        <td>@invoice.Date.ToShortDateString()</td>
                        <td>@EnumHelper.GetDisplayName(invoice.Status)</td>                       
                        <td class="text-end">@invoice.GrossAmount.ToString("N2")</td>                       
                        <td>
                            <a href="@Url.Action("Details", "Invoices", new { id = invoice.InvoiceNo })" class="btn btn-sm btn-info">View</a>
                            <a href="@Url.Action("Edit", "Invoices", new { id = invoice.InvoiceNo })" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No invoices found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>