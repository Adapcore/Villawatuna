@using HotelManagement.Enums
@using HotelManagement.Helper

@{
    ViewData["Title"] = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<link rel="stylesheet" href="~/css/invoice-index.css?v=@Configuration["Assets:Version"]" />

<div class="container-fluid py-3">
    <!-- Touch-Optimized Header -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="fw-bold text-primary mb-0 fs-2">📋 Invoices</h1>
                <a asp-action="Create" class="btn btn-success btn-sm d-flex align-items-center gap-2 px-3 py-2 btn-new-invoice">
                    <i class="bi bi-plus-circle"></i>
                    <span>New Invoice</span>
                </a>
            </div>

            <!-- Quick Invoice Type Buttons - Moved to Top -->
            <div class="row g-2 mb-3">
                <div class="col-12">
                    <h6 class="fw-bold mb-2">Quick Create Invoice</h6>
                    <div class="row g-2">
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="1" class="btn btn-outline-danger btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Dining Invoice">
                                <i class="bi bi-cup-hot-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Dining</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="2" class="btn btn-outline-warning btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Take Away Invoice">
                                <i class="bi bi-bag-check-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Take Away</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="3" class="btn btn-outline-primary btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Stay Invoice">
                                <i class="bi bi-building-check fs-4 mb-1"></i>
                                <span class="fw-bold small">Stay</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="5" class="btn btn-outline-success btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Tour Invoice">
                                <i class="bi bi-bus-front-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Tour</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="6" class="btn btn-outline-info btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Laundry Invoice">
                                <i class="bi bi-basket2-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Laundry</span>
                            </a>
                        </div>
                        <div class="col-4 col-sm-3 col-md-2 col-lg-1">
                            <a asp-action="Create" asp-route-type="4" class="btn btn-outline-secondary btn-sm w-100 d-flex flex-column align-items-center justify-content-center py-2" title="Add Other Invoice">
                                <i class="bi bi-gear-fill fs-4 mb-1"></i>
                                <span class="fw-bold small">Other</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card mb-3">
                <div class="card-body p-3">
                    <form id="invoiceFilterForm" class="row g-3">
                        <div class="col-md-2 col-sm-6">
                            <div class="invoice-filter-field">
                                <label class="form-label fw-bold invoice-filter-label">Customer</label>
                                <select name="customerId" id="customerId" class="form-select form-select-sm invoice-filter-input" asp-items="ViewBag.Customers">
                                    <option value="0">-- All Customers --</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="col-md-2 col-sm-6">
                            <div class="invoice-filter-field">
                                <label class="form-label fw-bold invoice-filter-label">Invoice Type</label>
                                <select name="invoiceType" id="invoiceType" class="form-select form-select-sm invoice-filter-input">
                                    <option value="">-- All Types --</option>
                                    @foreach (var item in ViewBag.InvoiceTypes as List<SelectListItem>)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="col-md-2 col-sm-6">
                            <div class="invoice-filter-field">
                                <label class="form-label fw-bold invoice-filter-label">From Date</label>
                                <input type="date" name="fromDate" id="fromDate" class="form-control form-control-sm invoice-filter-input" />
                            </div>
                        </div>
                        
                        <div class="col-md-2 col-sm-6">
                            <div class="invoice-filter-field">
                                <label class="form-label fw-bold invoice-filter-label">To Date</label>
                                <input type="date" name="toDate" id="toDate" class="form-control form-control-sm invoice-filter-input" />
                            </div>
                        </div>
                        
                        <div class="col-md-4 col-12">
                            <div class="invoice-filter-actions">
                                @* <div class="invoice-filter-checkbox">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="chkEnableDateRange">
                                        <label class="form-check-label" for="chkEnableDateRange">Enable Date Range</label>
                                    </div>
                                </div> *@
                                <div class="invoice-filter-buttons">
                                    <div class="d-flex gap-1 flex-wrap flex-md-nowrap">
                                        <button type="button" id="btnToday" class="btn btn-outline-secondary btn-sm">Today</button>
                                        <button type="button" id="btnYesterday" class="btn btn-outline-secondary btn-sm">Yesterday</button>
                                        <button type="button" id="btnMonth" class="btn btn-outline-secondary btn-sm">Month</button>
                                        <button type="button" id="btnYear" class="btn btn-outline-secondary btn-sm">Year</button>
                                        @* <button type="button" id="btnApply" class="btn btn-primary btn-sm"><i class="bi bi-funnel"></i> Apply</button> *@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- 🔹 Tabs -->
    <ul class="nav nav-tabs mb-3" id="invoiceStatusTabs">
        <li class="nav-item">
            <a class="nav-link active invoice-status-tab" href="#" data-status="">
                All Invoices
                <span class="badge bg-secondary ms-2" id="badge-all">0</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link invoice-status-tab" href="#" data-status="InProgress">
                Open (In Progress)
                <span class="badge bg-info text-dark ms-2" id="badge-open">0</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link invoice-status-tab" href="#" data-status="Complete">
                Complete
                <span class="badge bg-primary ms-2" id="badge-complete">0</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link invoice-status-tab" href="#" data-status="PartiallyPaid">
                Partially Paid
                <span class="badge bg-warning text-dark ms-2" id="badge-partial">0</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link invoice-status-tab" href="#" data-status="Paid">
                Paid
                <span class="badge bg-success ms-2" id="badge-paid">0</span>
            </a>
        </li>
    </ul>

    <!-- Loading Indicator -->
    <div id="invoiceLoadingIndicator" class="text-center py-5" style="display: none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Loading invoices...</p>
    </div>

    <!-- 🔹 Desktop Table -->
    <div class="invoice-table-desktop" id="invoiceTableDesktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Invoice No</th>
                        <th>Customer</th>
                        <th>Type</th>
                        <th>Date</th>
                        <th>Settled On</th>
                        <th>Status</th>
                        <th class="text-end">Total</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody id="invoiceTableBody">
                    <!-- Content loaded via AJAX -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout -->
    <div class="invoice-table-mobile" id="invoiceTableMobile">
        <!-- Content loaded via AJAX -->
    </div>

    <!-- Pagination Container -->
    <div id="invoicePaginationContainer">
        <!-- Pagination loaded via AJAX -->
    </div>
</div>

<!-- Payments Modal -->
<div class="modal fade" id="invoicePaymentsModal" tabindex="-1" aria-labelledby="invoicePaymentsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="invoicePaymentsModalLabel">Payments for Invoice #<span id="modalInvoiceNo"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="invoicePaymentsModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3">Loading payments...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

<input type="hidden" id="isAdminFlag" data-is-admin="@isAdmin" />

<script src="~/js/invoice-index.js?v=@Configuration["Assets:Version"]"></script>