@using HotelManagement.Enums
@model HotelManagement.Models.ViewModels.CreateInvoiceViewModel

@{
    string invoiceTypeName = Enum.GetName(typeof(InvoiceType), Enum.Parse<InvoiceType>(Model.Type.ToString()));
}

<div class="container-fluid bg-light p-3" style="min-height:100vh;">
    <div class="row">
        <!-- Left side: Invoice Details -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Invoice Items</h5>
                </div>
                <div class="card-body p-2">
                    <div class="table-responsive">
                        <table id="invoiceItems" class="table table-bordered table-striped align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>Item</th>
                                    @* <th>Description</th> *@
                                    @if (Model.Type == 3)
                                    {
                                        <th>Check-In</th>
                                        <th>Check-Out</th>
                                    }
                                    <th>Note</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Amount</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.InvoiceDetails)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" value="@detail.ItemId" class="itemId" />
                                            <select class="form-select orderItemSelect" data-selected="@detail.ItemId">
                                                <option value="">-- Select --</option>
                                                @* Options will be populated by JS *@
                                            </select>
                                        </td>
                                        @*<td><input type="text" class="form-control description" value="" readonly /></td> *@
                                        @if (Model.Type == 3)
                                        {
                                            <td><input type="date" class="form-control checkIn" value="@(detail.CheckIn?.ToString("yyyy-MM-dd"))" /></td>
                                            <td><input type="date" class="form-control checkOut" value="@(detail.CheckOut?.ToString("yyyy-MM-dd"))" /></td>
                                        }
                                        <td><input type="text" class="form-control note" value="@detail.Note" /></td>
                                        <td><input type="number" class="form-control orderQty" value="@detail.Quantity" /></td>
                                        <td><input type="text" class="form-control itemPrice" value="@detail.UnitPrice.ToString("F2")" readonly /></td>
                                        <td><input type="text" class="form-control itemTotal" value="@detail.Amount.ToString("F2")" readonly /></td>
                                        <td><button type="button" class="btn btn-danger btn-sm removeItemBtn">X</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <button type="button" id="addItemBtn" class="btn btn-lg btn-primary w-100 mt-2">
                        <i class="bi bi-plus-circle"></i> Add Item
                    </button>
                </div>
            </div>
        </div>

        <!-- Right side: Summary & Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Invoice Summary</h5>
                    @* <span class="ps-1 pe-1 bg-warning text-dark">@ViewBag.InvoiceTypeName</span> *@
                    <span class="ps-1 pe-1 bg-warning text-dark">@invoiceTypeName</span>
                </div>
                <div class="card-body">
                    <input asp-for="InvoiceNo" class="form-control" hidden />
                    <input asp-for="Type" class="form-control" hidden />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Status">Status</label>
                        @Html.DropDownListFor(model => model.Status,
                                 (IEnumerable<SelectListItem>)ViewBag.StatusList, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Customer</label>
                        <select asp-for="CustomerId" class="form-select form-select-lg" asp-items="ViewBag.Customers">
                            <option value="">-- Select Customer --</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Reference No</label>
                        <input asp-for="ReferenceNo" class="form-control" />
                        <span asp-validation-for="ReferenceNo" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Note</label>
                        <input asp-for="Note" class="form-control" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fs-5 mb-2">
                        <span>Sub Total</span>
                        <span id="subTotal">@Model.SubTotal</span>
                    </div>
                    <div class="d-flex justify-content-between fs-5 mb-2">
                        <span>Service Charge</span>
                        <span id="serviceCharge">@Model.ServiceCharge</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fs-4 fw-bold text-success">
                        <span>Gross Amount</span>
                        <span id="grossAmount">@Model.GrossAmount</span>
                    </div>
                    <hr />
                </div>
            </div>

            <div class="d-grid gap-2">
                <button id="btnCreateInvoice" type="button" class="btn btn-lg btn-success">
                    <i class="bi bi-cash-coin"></i> Pay & Save
                </button>
                <a asp-action="Index" class="btn btn-lg btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/invoice.js"></script>

<!-- Custom Invoice JS -->
<script src="~/js/invoice.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var obj = [];
        obj.mode = 'Edit';
        obj.type = @Model.Type;
        var invoice = $().invoice(obj);
    });
</script>
