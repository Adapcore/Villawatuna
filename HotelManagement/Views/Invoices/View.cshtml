@using HotelManagement.Enums
@model Invoice

@{
    ViewBag.Title = "View Invoice";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-dark">Invoice Details</h2>
        <a href="@Url.Action("Index", "Invoices")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <a href="@Url.Action("Print", "Invoices", new { id = Model.InvoiceNo })" target="_blank" class="btn btn-sm btn-warning">
            <i class="bi bi-printer"></i> Print
        </a>
        <a href="@Url.Action("PrintThermal", "Invoices", new { id = Model.InvoiceNo })" target="_blank" class="btn btn-sm btn-warning">
            <i class="bi bi-printer"></i> Print Thermal
        </a>
    </div>

    <!-- Invoice Info -->
    <div class="card shadow-sm p-4 mb-4 border-primary">
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary">Invoice No:</label>
                <p class="fs-5 text-dark">@Model.InvoiceNo</p>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary">Date:</label>
                <p class="fs-5 text-dark">@Model.Date.ToShortDateString()</p>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary">Status:</label>
                <p class="fs-5">
                    <span class="badge bg-@(Model.Status == InvoiceStatus.Paid ? "success" : Model.Status == InvoiceStatus.InProgress ? "warning" : "secondary")">
                        @Model.Status.ToString()
                    </span>
                </p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary">Customer:</label>
                <p class="fs-6 text-dark">@Model.Customer?.FirstName @Model.Customer?.LastName</p>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary">Reference No:</label>
                <p class="fs-6 text-dark">@Model.ReferenceNo</p>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-bold text-secondary">Note:</label>
                <p class="fs-6 text-dark">@Model.Note</p>
            </div>
        </div>
    </div>

    <!-- Invoice Items -->
    <div class="card shadow-sm p-4 mb-4 border-info">
        <h5 class="mb-3 text-info">Invoice Items</h5>
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-info text-center">
                <tr>
                    <th>Item</th>
                    <th>Description</th>
                    <th>Note</th>
                    <th class="text-end">Quantity</th>
                    <th class="text-end">Unit Price</th>
                    <th class="text-end">Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.InvoiceDetails != null && Model.InvoiceDetails.Any())
                {
                    foreach (var detail in Model.InvoiceDetails)
                    {
                        <tr>
                            <td>@detail.ItemId</td>
                            <td>@detail.MenuItem?.Name</td>
                            <td>@detail.Note</td>
                            <td class="text-end">@detail.Quantity</td>
                            <td class="text-end">@detail.UnitPrice.ToString("F2")</td>
                            <td class="text-end fw-semibold text-success">@detail.Amount.ToString("F2")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No items found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Totals -->
    <div class="card shadow-sm p-4 border-success">
        <div class="row mb-2">
            <div class="col-md-4 offset-md-8">
                <div class="d-flex justify-content-between">
                    <span class="fw-bold text-secondary">Subtotal:</span>
                    <span class="text-dark">@Model.SubTotal.ToString("F2")</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="fw-bold text-secondary">Service Charge:</span>
                    <span class="text-dark">@Model.ServiceCharge.ToString("F2")</span>
                </div>
                <hr />
                <div class="d-flex justify-content-between">
                    <span class="fw-bold fs-5 text-success">Gross Total:</span>
                    <span class="fw-bold fs-5 text-success">@Model.GrossAmount.ToString("F2")</span>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .card {
        border-radius: 12px;
    }

    .card-header, .card-footer {
        border-radius: 12px;
    }

    .table th {
        background-color: #17a2b8 !important;
        color: white !important;
    }

    .table-hover tbody tr:hover {
        background-color: #e0f7fa;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }

    h2, h5 {
        font-weight: 600;
    }
</style>
