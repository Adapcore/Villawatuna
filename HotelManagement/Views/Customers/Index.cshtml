@model IEnumerable<HotelManagement.Models.Entities.Customer>

<div class="container my-4">
    <h2 class="mb-3">Customers</h2>

    <p>
        <a class="btn btn-primary" href="@Url.Action("Create", "Customers")">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Passport No</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Email</td>
                    <td>@(string.Join(" ", new[] { c.FirstName, c.LastName }.Where(s => !string.IsNullOrWhiteSpace(s))))</td>
                    <td>@c.ContactNo</td>
                    <td>@c.PassportNo</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" href="@Url.Action("Edit", "Customers", new { id = c.ID })">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />