@model X.PagedList.IPagedList<HotelManagement.Models.Entities.Customer>

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/customers-employees-index.css" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">👨🏻‍💼 Customers</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Customer
        </a>
    </div>

    <!-- 🔹 Desktop Table -->
    <div class="list-table-desktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Passport No</th>
                        <th>Room No</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Email</td>
                            <td>@(string.Join(" ", new[] { c.FirstName, c.LastName }.Where(s => !string.IsNullOrWhiteSpace(s))))</td>
                            <td>@c.ContactNo</td>
                            <td>@c.PassportNo</td>
                            <td>@(string.IsNullOrWhiteSpace(c.RoomNo) ? "-" : "#" + c.RoomNo)</td>
                            <td>
                                <a class="btn btn-sm btn-warning me-2" href="@Url.Action("Edit", "Customers", new { id = c.ID })">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout -->
    <div class="list-table-mobile">
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3 fs-5">No customers found.</p>
            </div>
        }
        else
        {
            @foreach (var c in Model)
            {
                <div class="list-card">
                    <div class="list-card-header">
                        <h6 class="list-card-title">
                            @if (!string.IsNullOrWhiteSpace(c.RoomNo))
                            {
                                <text>#@c.RoomNo - @c.FirstName @c.LastName</text>
                            }
                            else
                            {
                                <text>@c.FirstName @c.LastName</text>
                            }
                        </h6>
                    </div>
                    <div class="list-card-body">
                        <div class="list-card-row full-width">
                            <div class="list-card-label">Email</div>
                            <div class="list-card-value">@c.Email</div>
                        </div>
                        <div class="list-card-row">
                            <div class="list-card-label">Contact</div>
                            <div class="list-card-value">@c.ContactNo</div>
                        </div>
                        <div class="list-card-row">
                            <div class="list-card-label">Passport No</div>
                            <div class="list-card-value">@c.PassportNo</div>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(c.RoomNo))
                        {
                            <div class="list-card-row">
                                <div class="list-card-label">Room No</div>
                                <div class="list-card-value">#@c.RoomNo</div>
                            </div>
                        }
                    </div>
                    <div class="list-card-footer">
                        <a href="@Url.Action("Edit", "Customers", new { id = c.ID })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </div>
            }
        }
    </div>
    @await Html.PartialAsync("_Pagination", Model)
</div>
