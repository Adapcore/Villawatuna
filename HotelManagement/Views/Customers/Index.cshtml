@model IEnumerable<HotelManagement.Models.Entities.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0"> Customers</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Customer
        </a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Passport No</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Email</td>
                    <td>@(string.Join(" ", new[] { c.FirstName, c.LastName }.Where(s => !string.IsNullOrWhiteSpace(s))))</td>
                    <td>@c.ContactNo</td>
                    <td>@c.PassportNo</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" href="@Url.Action("Edit", "Customers", new { id = c.ID })">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>