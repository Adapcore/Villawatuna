@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/customers-employees-index.css?v=@Configuration["Assets:Version"]" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">👨🏻‍💼 Customers</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Customer
        </a>
    </div>

    <!-- 🔹 Status Tabs -->
    <ul class="nav nav-tabs mb-3" id="customerStatusTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab-all" data-bs-toggle="tab" type="button" role="tab"
                    aria-selected="true" data-filter="all">
                All
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-active" data-bs-toggle="tab" type="button" role="tab"
                    aria-selected="false" data-filter="active">
                Active
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab-inactive" data-bs-toggle="tab" type="button" role="tab"
                    aria-selected="false" data-filter="inactive">
                Inactive
            </button>
        </li>
    </ul>

    <!-- 🔹 Desktop Table (AJAX populated) -->
    <div class="list-table-desktop" id="customerTableDesktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th>Passport No</th>
                        <th>Room No</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="customerTableBody">
                    <!-- Content loaded via AJAX -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout (AJAX populated) -->
    <div class="list-table-mobile" id="customerTableMobile">
        <!-- Content loaded via AJAX -->
    </div>

    <!-- Pagination Container -->
    <div id="customerPaginationContainer">
        <!-- Pagination loaded via AJAX -->
    </div>
</div>

@section Scripts {
    <script src="~/js/customers-index.js"></script>
}
