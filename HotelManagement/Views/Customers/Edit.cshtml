@model HotelManagement.Models.Entities.Customer

@{
    ViewData["Title"] = "Edit Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">👨🏻‍💼 Edit Customer - [ @Model.ID ]</h2>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ID" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Same layout as Create.cshtml -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="ContactNo" class="form-label"></label>
                <input asp-for="ContactNo" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Country</label>
                <select asp-for="Country" class="form-select">
                    <option value="">-- Select Country --</option>
                    @if (ViewBag.Countries != null)
                    {
                        foreach (var c in (IEnumerable<KeyValuePair<string, string>>)ViewBag.Countries)
                        {
                            <option value="@c.Key" selected="@(Model.Country == c.Key ? "selected" : null)">@c.Value</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NIC" class="form-label"></label>
                <input asp-for="NIC" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="PassportNo" class="form-label"></label>
                <input asp-for="PassportNo" class="form-control" />
            </div>
        </div>

        <button type="submit" class="btn btn-success me-2">Save</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Customers")">Cancel</a>
    </form>
</div>