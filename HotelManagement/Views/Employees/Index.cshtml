@model IEnumerable<HotelManagement.Models.Entities.Employee>

@{
    ViewData["Title"] = "Employees";
}

<div class="container my-4">
    <h2 class="mb-3">Employees</h2>

    <p>
        <a class="btn btn-primary" href="@Url.Action("Create", "Employees")">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Username</td>
                <td>@(string.Join(" ", new[]{e.FirstName, e.LastName}.Where(s => !string.IsNullOrWhiteSpace(s))))</td>
                <td>@e.Email</td>
                <td>@e.ContactNo</td>
                <td>
                    <a class="btn btn-sm btn-warning me-2" href="@Url.Action("Edit", "Employees", new { id = e.ID })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Employees", new { id = e.ID })">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
