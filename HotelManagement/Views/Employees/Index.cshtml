@model X.PagedList.IPagedList<HotelManagement.Models.Entities.Employee>

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/customers-employees-index.css?v=@Configuration["Assets:Version"]" />

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">👨‍🔧 Employees</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Employee
        </a>
    </div>

    <!-- 🔹 Desktop Table -->
    <div class="list-table-desktop">
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No employees found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var e in Model)
                        {
                            <tr>
                                <td>@e.Username</td>
                                <td>@(string.Join(" ", new[]{e.FirstName, e.LastName}.Where(s => !string.IsNullOrWhiteSpace(s))))</td>
                                <td>@e.Email</td>
                                <td>@e.ContactNo</td>
                                <td>
                                    <a class="btn btn-sm btn-warning me-2" href="@Url.Action("Edit", "Employees", new { id = e.ID })">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 🔹 Mobile Card Layout -->
    <div class="list-table-mobile">
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-3 fs-5">No employees found.</p>
            </div>
        }
        else
        {
            @foreach (var e in Model)
            {
                <div class="list-card">
                    <div class="list-card-header">
                        <h6 class="list-card-title">@e.Username</h6>
                    </div>
                    <div class="list-card-body">
                        <div class="list-card-row full-width">
                            <div class="list-card-label">Name</div>
                            <div class="list-card-value">@(string.Join(" ", new[]{e.FirstName, e.LastName}.Where(s => !string.IsNullOrWhiteSpace(s))))</div>
                        </div>
                        <div class="list-card-row full-width">
                            <div class="list-card-label">Email</div>
                            <div class="list-card-value">@e.Email</div>
                        </div>
                        <div class="list-card-row">
                            <div class="list-card-label">Contact</div>
                            <div class="list-card-value">@e.ContactNo</div>
                        </div>
                    </div>
                    <div class="list-card-footer">
                        <a href="@Url.Action("Edit", "Employees", new { id = e.ID })" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </div>
            }
        }
    </div>
    @await Html.PartialAsync("_Pagination", Model)
</div>









