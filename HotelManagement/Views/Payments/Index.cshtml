@model X.PagedList.IPagedList<HotelManagement.Models.Entities.Payment>

@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">💲Payments</h2>
    </div>

   @*  <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Add New Payment</a>
    </div> *@

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Payment ID</th>
                    <th>Date</th>
                    <th>Invoice No</th>
                    <th>Type</th>
                    <th>Refference</th>
                    <th>Amount</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model)
                {
                    <tr>
                        <td>@payment.ID</td>
                        <td>@payment.Date.ToString("dd MMM yyyy")</td>
                        <td>@payment.InvoiceNo</td>
                        <td>@payment.Type</td>
                        <td>@payment.Reference</td>
                        <td class="text-end">@payment.Amount.ToString("N2")</td>
                        <td>
                            @* <a asp-action="Details" asp-route-id="@payment.PaymentId" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@payment.PaymentId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@payment.PaymentId" class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this payment?');">Delete</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No payments found.
        </div>
    }
</div>
@await Html.PartialAsync("_Pagination", Model)