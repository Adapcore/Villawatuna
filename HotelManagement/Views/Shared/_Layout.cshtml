<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Management</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header.navbar {
            background-color: #003366;
            color: white;
            padding: 1rem;
        }

        header a.nav-link, header .navbar-brand {
            color: white !important;
            font-weight: 500;
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        header a.nav-link:hover {
            background-color: #00509e;
            transform: translateY(-1px);
        }

        header .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
        }

        footer {
            background-color: #003366;
            color: white;
            padding: 1.5rem;
            margin-top: auto;
            text-align: center;
        }

        main.container {
            padding-top: 2rem;
            padding-bottom: 3rem;
        }

        /* Touch Screen Optimizations */
        .btn {
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .btn:hover {
            transform: translateY(-1px);
        }

        .btn:active {
            transform: translateY(0);
        }

        /* Larger touch targets */
        .nav-link {
            min-height: 48px;
            display: flex;
            align-items: center;
        }

        /* Mobile optimizations */
        @@media (max-width: 768px) {
            header .navbar-nav {
                text-align: center;
            }
            
            header a.nav-link, header .navbar-brand {
                padding: 1rem;
                font-size: 1.2rem;
                min-height: 56px;
            }
            
            header .navbar-brand {
                font-size: 1.8rem;
            }
            
            main.container {
                padding-top: 1rem;
                padding-bottom: 2rem;
            }
            
            footer {
                padding: 2rem 1rem;
            }
        }

        /* Tablet optimizations */
        @@media (min-width: 769px) and (max-width: 1024px) {
            header a.nav-link {
                padding: 0.75rem 1.25rem;
                font-size: 1.15rem;
            }
        }

        /* Focus states for accessibility */
        .nav-link:focus, .btn:focus {
            outline: 3px solid #007bff;
            outline-offset: 2px;
        }

        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Touch-friendly styles */
        .touch-card {
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .touch-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
        }

        .touch-card:active {
            transform: translateY(0);
        }

        /* Larger touch targets for mobile */
        @@media (max-width: 768px) {
            .btn-lg {
                min-height: 60px;
                font-size: 1.1rem;
            }
            
            .card-body {
                padding: 1.5rem !important;
            }
            
            .fs-1 {
                font-size: 2.5rem !important;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/">🏨 Vilawatuna Hotel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-lg-center">
                    @if (Context.User?.Identity != null && Context.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-controller="Dashboard" asp-action="Index" class="nav-link">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Employees" asp-action="Index" class="nav-link">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Customers" asp-action="Index" class="nav-link">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Invoices" asp-action="Index" class="nav-link">Invoices</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Expenses" asp-action="Index" class="nav-link">Expenses</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Payments" asp-action="Index" class="nav-link">Payments</a>
                        </li>
                    }

                    @if (Context.User?.Identity != null && Context.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item me-2">
                            <span class="navbar-text text-white d-flex align-items-center">
                                <i class="bi bi-person-circle me-2"></i>
                                @Context.User.Identity.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-light ms-2">Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
                    }
                </ul>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main role="main" class="container-fluid px-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div>&copy; @DateTime.Now.Year - Hotel Management System | Powerd By Adapcore | All rights reserved</div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
