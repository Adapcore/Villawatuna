@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold text-primary mb-3">🏨 Vilawatuna Hotel</h1>
            <p class="lead text-muted mb-4">Experience luxury and comfort in the heart of Sri Lanka</p>
            @if (!(Context.User?.Identity?.IsAuthenticated ?? false))
            {
                <a href="/Account/Login" class="btn btn-primary btn-lg px-5 py-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Staff Login
                </a>
            }
        </div>
    </div>

    <!-- Features Section -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-geo-alt-fill fs-1 text-primary mb-3"></i>
                    <h5 class="fw-semibold">Prime Location</h5>
                    <p class="text-muted">Located in the beautiful coastal town of Vilawatuna, just steps away from pristine beaches and local attractions.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-star-fill fs-1 text-warning mb-3"></i>
                    <h5 class="fw-semibold">Luxury Amenities</h5>
                    <p class="text-muted">Enjoy world-class facilities including spa services, fine dining, and modern room amenities for a memorable stay.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <i class="bi bi-people-fill fs-1 text-success mb-3"></i>
                    <h5 class="fw-semibold">Exceptional Service</h5>
                    <p class="text-muted">Our dedicated staff is committed to providing personalized service and ensuring your comfort throughout your stay.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact Information -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-telephone me-2"></i>Contact Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-geo-alt text-primary me-3 fs-5"></i>
                                <div>
                                    <strong>Address:</strong><br>
                                    Vilawatuna Beach Road,<br>
                                    Galle, Sri Lanka
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-telephone text-primary me-3 fs-5"></i>
                                <div>
                                    <strong>Phone:</strong><br>
                                    +94 91 2 345 678
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-envelope text-primary me-3 fs-5"></i>
                                <div>
                                    <strong>Email:</strong><br>
                                    info@vilawatunahotel.com
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-clock me-2"></i>Hotel Services</h5>
                </div>
                <div class="card-body p-4">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>24/7 Front Desk Service</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Free WiFi in all areas</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Airport Transfer Service</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Restaurant & Bar</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Spa & Wellness Center</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Swimming Pool</li>
                        <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i>Tour Booking Assistance</li>
                        <li class="mb-0"><i class="bi bi-check-circle-fill text-success me-2"></i>Laundry Service</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
