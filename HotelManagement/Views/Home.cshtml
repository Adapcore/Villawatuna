@using Umbraco.Cms.Core.Security
@using Umbraco.Cms.Core.Services
@inject IMemberManager MemberManager
@inject IMemberService MemberService

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";

    // Set ViewBag.IsAdmin if not already set by controller
    if (ViewBag.IsAdmin == null)
    {
        bool isAdmin = false;
        var username = Context.User?.Identity?.Name;
        if (!string.IsNullOrWhiteSpace(username))
        {
            var memberIdentity = MemberManager.FindByNameAsync(username).GetAwaiter().GetResult();
            if (memberIdentity != null)
            {
                var member = MemberService.GetByKey(memberIdentity.Key);
                if (member != null)
                {
                    var rawType = member.GetValue<string>("userType") ?? "";
                    var userType = rawType.Replace("[", "").Replace("]", "").Replace("\"", "").Trim();
                    isAdmin = string.Equals(userType, "Admin", StringComparison.OrdinalIgnoreCase);
                }
            }
        }
        ViewBag.IsAdmin = isAdmin;
    }
}

<link rel="stylesheet" href="~/css/dashboard.css" />
<link rel="stylesheet" href="~/css/invoice-index.css" />
<link rel="stylesheet" href="~/css/expenses-index.css" />
<link rel="stylesheet" href="~/css/payments-index.css" />

@if (!(Context.User?.Identity?.IsAuthenticated ?? false))
{
    <script src="~/js/auth-redirect.js"></script>
    <div class="container-fluid py-4">
        <div class="alert alert-info text-center">
            <p>Redirecting to login page... <a href="/Account/Login">Click here if not redirected</a></p>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-3">
        <h2 class="mt-3 mb-4">Dashboard</h2>

        <!-- Touch-friendly quick actions -->
        <div class="row g-3 mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 fw-semibold">Quick Actions</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-6 col-md-4">
                                <a asp-controller="Invoices" asp-action="Create" class="btn btn-primary btn-lg w-100 py-3 quick-action-btn">
                                    <i class="bi bi-plus-circle fs-4 me-2"></i>
                                    <div>New Invoice</div>
                                </a>
                            </div>
                            <div class="col-6 col-md-4 d-none d-md-block">
                                <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-secondary btn-lg w-100 py-3 quick-action-btn">
                                    <i class="bi bi-person-plus fs-4 me-2"></i>
                                    <div>Add Customer</div>
                                </a>
                            </div>
                            <div class="col-6 col-md-4">
                                <a asp-controller="Expenses" asp-action="Create" class="btn btn-outline-secondary btn-lg w-100 py-3 quick-action-btn">
                                    <i class="bi bi-wallet2 fs-4 me-2"></i>
                                    <div>Add Expense</div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Filters -->
        <div class="row g-3 mb-3 align-items-end">
            <div class="col-12 col-md-3">
                <div class="dashboard-date-filter">
                    <label class="form-label fw-semibold dashboard-date-label">From</label>
                    <input type="date" id="fromDate" class="form-control form-control-sm dashboard-date-input" />
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="dashboard-date-filter">
                    <label class="form-label fw-semibold dashboard-date-label">To</label>
                    <input type="date" id="toDate" class="form-control form-control-sm dashboard-date-input" />
                </div>
            </div>
            <div class="col-12 col-md-6 filter-section">
                <div class="dashboard-button-row">
                    <button id="btnToday" class="btn btn-outline-secondary btn-sm">Today</button>
                    <button id="btnYesterday" class="btn btn-outline-secondary btn-sm">Yesterday</button>
                </div>
                <div class="dashboard-button-row">
                    <button id="btnMonth" class="btn btn-outline-secondary btn-sm">Month</button>
                    <button id="btnYear" class="btn btn-outline-secondary btn-sm">Year</button>
                </div>
            </div>
        </div>

        <!-- Summary cards (dynamic) -->
        <div class="row g-3 mb-4">
            @if (true || ViewBag.IsAdmin == true)
            {
                <div class="col-6 col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 p-3 text-center bg-success text-white dashboard-tile" data-tile-type="invoices" data-tile-title="Total Income">
                        <i class="bi bi-cash-coin fs-2 mb-2"></i>
                        <h6>Total Income</h6>
                        <h4 id="tileTotalIncome" class="fw-bold">LKR 0.00</h4>
                    </div>
                </div>
           
                <div class="col-6 col-md-3">
                    <div class="card shadow-sm border-0 rounded-3 p-3 text-center" style="background-color: #0d6efd; color: white;">
                        <i class="bi bi-graph-up-arrow fs-2 mb-2"></i>
                        <h6>Total Revenue</h6>
                        <h4 id="tileTotalRevenue" class="fw-bold">LKR 0.00</h4>
                    </div>
                </div>
            }

            <div class="col-6 col-md-3">
                <div class="card shadow-sm border-0 rounded-3 p-3 text-center bg-warning text-dark dashboard-tile" data-tile-type="expenses" data-tile-title="Expenses">
                    <i class="bi bi-wallet2 fs-2 mb-2"></i>
                    <h6>Expenses</h6>
                    <h4 id="tileExpenses" class="fw-bold">LKR 0.00</h4>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card shadow-sm border-0 rounded-3 p-3 text-center bg-primary text-white dashboard-tile" data-tile-type="restaurant" data-tile-title="Restaurant Revenue">
                    <i class="bi bi-egg-fried fs-2 mb-2"></i>
                    <h6>Restaurant</h6>
                    <h4 id="tileRestaurantRevenue" class="fw-bold">LKR 0.00</h4>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card shadow-sm border-0 rounded-3 p-3 text-center bg-info text-dark dashboard-tile" data-tile-type="servicecharges" data-tile-title="Service Charges">
                    <i class="bi bi-receipt fs-2 mb-2"></i>
                    <h6>Service Charges</h6>
                    <h4 id="tileServiceCharges" class="fw-bold">LKR 0.00</h4>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card shadow-sm border-0 rounded-3 p-3 text-center dashboard-tile" style="background-color: #6f42c1; color: white;" data-tile-type="stay" data-tile-title="Stay Revenue">
                    <i class="bi bi-building fs-2 mb-2"></i>
                    <h6>Stay</h6>
                    <h4 id="tileStayRevenue" class="fw-bold">LKR 0.00</h4>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card shadow-sm border-0 rounded-3 p-3 text-center bg-secondary text-white dashboard-tile" data-tile-type="laundry" data-tile-title="Laundry Revenue">
                    <i class="bi bi-basket2 fs-2 mb-2"></i>
                    <h6>Laundry</h6>
                    <h4 id="tileLaundryRevenue" class="fw-bold">LKR 0.00</h4>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card shadow-sm border-0 rounded-3 p-3 text-center bg-danger text-white dashboard-tile" data-tile-type="tour" data-tile-title="Tour Revenue">
                    <i class="bi bi-bus-front fs-2 mb-2"></i>
                    <h6>Tour</h6>
                    <h4 id="tileTourRevenue" class="fw-bold">LKR 0.00</h4>
                </div>
            </div>

            <div class="col-6 col-md-3">
                <div class="card shadow-sm border-0 rounded-3 p-3 text-center dashboard-tile" style="background-color: #20c997; color: white;" data-tile-type="other" data-tile-title="Other Revenue">
                    <i class="bi bi-three-dots fs-2 mb-2"></i>
                    <h6>Other</h6>
                    <h4 id="tileOtherRevenue" class="fw-bold">LKR 0.00</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Tile Popup Modal -->
    <div class="modal fade" id="dashboardTileModal" tabindex="-1" aria-labelledby="dashboardTileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="dashboardTileModalLabel">Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="dashboardTileModalBody">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">Loading data...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
    <script src="~/js/dashboard.js"></script>
    <script>
        $(document).ready(function() {
            InitializeDashboard();
            
            // Debug: Check if tiles are found
            console.log('Dashboard tiles found:', $('.dashboard-tile').length);
            console.log('Bootstrap available:', typeof bootstrap !== 'undefined');
            console.log('Modal element exists:', $('#dashboardTileModal').length > 0);
            
            // Test click handler
            $('.dashboard-tile').each(function() {
                console.log('Tile:', $(this).data('tile-type'), $(this).data('tile-title'));
            });
        });
    </script>
    }
}

