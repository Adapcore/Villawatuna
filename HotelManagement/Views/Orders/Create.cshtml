@model HotelManagement.Models.CreateOrderViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container mt-4 mb-4">
    <h2>Create Order</h2>

    <form asp-action="Create" method="post">
    <div class="row g-3">
        <!-- Left Column -->
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                 <label asp-for="CustomerId" class="form-label">Customer</label>
                 <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                <option value="">-- Select Customer --</option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TableNo" class="form-label"></label>
                <input asp-for="TableNo" type="number" class="form-control" />
                <span asp-validation-for="TableNo" class="text-danger"></span>
            </div>           
           
            <div class="mb-3">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-6">              
            <div class="mb-3">
                <label asp-for="SubTotal" class="form-label"></label>
                <input asp-for="SubTotal" class="form-control" readonly id="SubTotal" />
            </div>

            <div class="mb-3">
                <label asp-for="ServiceCharge" class="form-label"></label>
                <input asp-for="ServiceCharge" class="form-control" readonly id="ServiceCharge" />
            </div>

            <div class="mb-3">
                <label asp-for="GrossAmount" class="form-label"></label>
                <input asp-for="GrossAmount" class="form-control" readonly id="GrossAmount" />
            </div>
            
            <div class="form-check mb-3">
                <input asp-for="IsFreeOfCharge" class="form-check-input" type="checkbox" />
                <label asp-for="IsFreeOfCharge" class="form-check-label"></label>
            </div>

             <div class="form-check mb-3">
                <input asp-for="Dining" class="form-check-input" type="checkbox" />
                <label asp-for="Dining" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <hr />

    <h5>Order Items</h5>
    <button type="button" class="btn btn-secondary mb-2" id="addItemBtn">+ Add Item</button>

    <table class="table table-bordered" id="orderItemsTable">
        <thead>
            <tr>
                <th>Item</th>
                <th>Comments</th>
                <th>Qty</th>
                <th>Unit Price</th>
                <th>Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
                @for (int i = 0; i < Model.OrderItems.Count; i++)
                {
                    <tr>
                        <td>@Html.TextBoxFor(m => m.OrderItems[i].ItemId, new { @class = "form-control" })</td>
                        <td>@Html.TextBoxFor(m => m.OrderItems[i].Comments, new { @class = "form-control" })</td>
                        <td>@Html.TextBoxFor(m => m.OrderItems[i].Qty, new { @class = "form-control qty", type = "number" })</td>
                        <td>@Html.TextBoxFor(m => m.OrderItems[i].UnitPrice, new { @class = "form-control unitprice", type = "number", step = "0.01" })</td>
                        <td>@Html.TextBoxFor(m => m.OrderItems[i].Amount, new { @class = "form-control amount", @readonly = "readonly" })</td>
                    </tr>
                }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Order</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/orders.js"></script>
<script>
    InitializeOrderCreate();
</script>

