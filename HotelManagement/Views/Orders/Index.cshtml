@model IEnumerable<HotelManagement.Models.Entities.Order>

<div class="container mt-4">
    <h2>Orders</h2>
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New Order</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order No</th>
                <th>Date</th>
                <th>Customer</th>
                <th>Table No</th>
                <th>Gross Amount</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderNo</td>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Customer?.FirstName @item.Customer?.LastName</td>
                    <td>@item.TableNo</td>
                    <td>@item.GrossAmount.ToString("C")</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.OrderNo">Details</a>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.OrderNo">Edit</a>
                        @* <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.OrderNo">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />